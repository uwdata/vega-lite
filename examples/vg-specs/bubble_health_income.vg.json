{
    "$schema": "http://vega.github.io/schema/vega/v3.0.json",
    "description": "A bubble plot showing the correlation between health and income for 187 countries in the world (modified from an example in Lisa Charlotte Rost's blog post 'One Chart, Twelve Charting Libraries' --http://lisacharlotterost.github.io/2016/05/17/one-chart-code/).",
    "autosize": "pad",
    "padding": 5,
    "encode": {
        "update": {
            "fill": {
                "value": "transparent"
            }
        }
    },
    "data": [
        {
            "name": "source_0",
            "url": "data/gapminder-health-income.csv",
            "format": {
                "type": "csv",
                "parse": {
                    "health": "number",
                    "income": "number",
                    "population": "number"
                }
            },
            "transform": [
                {
                    "type": "filter",
                    "expr": "datum[\"health\"] !== null && !isNaN(datum[\"health\"])"
                },
                {
                    "type": "filter",
                    "expr": "datum[\"income\"] > 0"
                },
                {
                    "type": "filter",
                    "expr": "datum[\"population\"] !== null && !isNaN(datum[\"population\"])"
                }
            ]
        }
    ],
    "signals": [
        {
            "name": "width",
            "update": "500"
        },
        {
            "name": "height",
            "update": "300"
        }
    ],
    "marks": [
        {
            "name": "marks",
            "type": "symbol",
            "role": "circle",
            "from": {
                "data": "source_0"
            },
            "encode": {
                "update": {
                    "x": {
                        "scale": "x",
                        "field": "income"
                    },
                    "y": {
                        "scale": "y",
                        "field": "health"
                    },
                    "fill": {
                        "value": "#000"
                    },
                    "size": {
                        "scale": "size",
                        "field": "population"
                    },
                    "shape": {
                        "value": "circle"
                    },
                    "opacity": {
                        "value": 0.7
                    }
                }
            }
        }
    ],
    "scales": [
        {
            "name": "x",
            "type": "log",
            "domain": {
                "data": "source_0",
                "field": "income"
            },
            "range": [
                0,
                500
            ],
            "round": true,
            "nice": true
        },
        {
            "name": "y",
            "type": "linear",
            "domain": {
                "data": "source_0",
                "field": "health"
            },
            "range": [
                300,
                0
            ],
            "zero": false,
            "round": true,
            "nice": true
        },
        {
            "name": "size",
            "type": "linear",
            "domain": {
                "data": "source_0",
                "field": "population"
            },
            "range": [
                0,
                361
            ],
            "nice": false,
            "zero": true
        }
    ],
    "axes": [
        {
            "scale": "x",
            "labelOverlap": true,
            "orient": "bottom",
            "tickCount": 5,
            "title": "income",
            "zindex": 1
        },
        {
            "scale": "x",
            "domain": false,
            "grid": true,
            "labels": false,
            "orient": "bottom",
            "tickCount": 5,
            "ticks": false,
            "zindex": 0,
            "gridScale": "y"
        },
        {
            "scale": "y",
            "orient": "left",
            "title": "health",
            "zindex": 1
        },
        {
            "scale": "y",
            "domain": false,
            "grid": true,
            "labels": false,
            "orient": "left",
            "ticks": false,
            "zindex": 0,
            "gridScale": "x"
        }
    ],
    "legends": [
        {
            "size": "size",
            "title": "population",
            "encode": {
                "symbols": {
                    "update": {
                        "shape": {
                            "value": "circle"
                        },
                        "fill": {
                            "value": "#000"
                        }
                    }
                }
            }
        }
    ]
}