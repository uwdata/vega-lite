{
    "$schema": "https://vega.github.io/schema/vega/v3.0.json",
    "autosize": "pad",
    "padding": 5,
    "encode": {
        "update": {
            "fill": {
                "value": "transparent"
            }
        }
    },
    "data": [
        {
            "name": "source_0",
            "url": "data/cars.json",
            "format": {
                "type": "json"
            }
        },
        {
            "name": "data_1",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"Horsepower\"])",
                    "as": "Horsepower"
                }
            ]
        },
        {
            "name": "data_2",
            "source": "data_1",
            "transform": [
                {
                    "type": "aggregate",
                    "groupby": [
                        "Cylinders"
                    ],
                    "ops": [
                        "min"
                    ],
                    "fields": [
                        "Horsepower"
                    ],
                    "as": [
                        "min_Horsepower"
                    ]
                },
                {
                    "type": "collect",
                    "sort": {
                        "field": "Cylinders",
                        "order": "descending"
                    }
                }
            ]
        },
        {
            "name": "data_3",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"Horsepower\"])",
                    "as": "Horsepower"
                }
            ]
        },
        {
            "name": "data_4",
            "source": "data_3",
            "transform": [
                {
                    "type": "aggregate",
                    "groupby": [
                        "Cylinders"
                    ],
                    "ops": [
                        "min"
                    ],
                    "fields": [
                        "Horsepower"
                    ],
                    "as": [
                        "min_Horsepower"
                    ]
                }
            ]
        },
        {
            "name": "data_5",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"Horsepower\"])",
                    "as": "Horsepower"
                },
                {
                    "type": "aggregate",
                    "groupby": [
                        "Cylinders"
                    ],
                    "ops": [
                        "max"
                    ],
                    "fields": [
                        "Horsepower"
                    ],
                    "as": [
                        "max_Horsepower"
                    ]
                },
                {
                    "type": "collect",
                    "sort": {
                        "field": "Cylinders",
                        "order": "descending"
                    }
                }
            ]
        },
        {
            "name": "data_6",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"Horsepower\"])",
                    "as": "Horsepower"
                },
                {
                    "type": "aggregate",
                    "groupby": [
                        "Cylinders"
                    ],
                    "ops": [
                        "max"
                    ],
                    "fields": [
                        "Horsepower"
                    ],
                    "as": [
                        "max_Horsepower"
                    ]
                }
            ]
        }
    ],
    "signals": [
        {
            "name": "width",
            "update": "bandspace(domain('x').length, 1, 0.5) * 21"
        },
        {
            "name": "height",
            "update": "200"
        }
    ],
    "marks": [
        {
            "name": "layer_0_layer_0_marks",
            "type": "line",
            "from": {
                "data": "data_5"
            },
            "encode": {
                "update": {
                    "x": {
                        "scale": "x",
                        "field": "Cylinders"
                    },
                    "y": {
                        "scale": "y",
                        "field": "max_Horsepower"
                    },
                    "stroke": {
                        "value": "darkred"
                    }
                }
            },
            "clip": true
        },
        {
            "name": "layer_0_layer_1_marks",
            "type": "symbol",
            "role": "pointOverlay",
            "from": {
                "data": "data_6"
            },
            "encode": {
                "update": {
                    "x": {
                        "scale": "x",
                        "field": "Cylinders"
                    },
                    "y": {
                        "scale": "y",
                        "field": "max_Horsepower"
                    },
                    "fill": {
                        "value": "darkred"
                    }
                }
            },
            "clip": true
        },
        {
            "name": "layer_1_layer_0_marks",
            "type": "line",
            "from": {
                "data": "data_2"
            },
            "encode": {
                "update": {
                    "x": {
                        "scale": "x",
                        "field": "Cylinders"
                    },
                    "y": {
                        "scale": "y",
                        "field": "min_Horsepower"
                    },
                    "stroke": {
                        "value": "#4c78a8"
                    }
                }
            },
            "clip": true
        },
        {
            "name": "layer_1_layer_1_marks",
            "type": "symbol",
            "role": "pointOverlay",
            "from": {
                "data": "data_4"
            },
            "encode": {
                "update": {
                    "x": {
                        "scale": "x",
                        "field": "Cylinders"
                    },
                    "y": {
                        "scale": "y",
                        "field": "min_Horsepower"
                    },
                    "fill": {
                        "value": "#4c78a8"
                    }
                }
            },
            "clip": true
        }
    ],
    "scales": [
        {
            "name": "x",
            "type": "point",
            "domain": {
                "fields": [
                    {
                        "data": "data_5",
                        "field": "Cylinders"
                    },
                    {
                        "data": "data_6",
                        "field": "Cylinders"
                    },
                    {
                        "data": "data_2",
                        "field": "Cylinders"
                    },
                    {
                        "data": "data_4",
                        "field": "Cylinders"
                    }
                ],
                "sort": true
            },
            "range": {
                "step": 21
            },
            "round": true,
            "padding": 0.5
        },
        {
            "name": "y",
            "type": "linear",
            "domain": {
                "fields": [
                    {
                        "data": "data_5",
                        "field": "max_Horsepower"
                    },
                    {
                        "data": "data_6",
                        "field": "max_Horsepower"
                    },
                    {
                        "data": "data_2",
                        "field": "min_Horsepower"
                    },
                    {
                        "data": "data_4",
                        "field": "min_Horsepower"
                    }
                ],
                "sort": true
            },
            "range": [
                200,
                0
            ],
            "round": true,
            "nice": true,
            "zero": true
        }
    ],
    "axes": [
        {
            "scale": "x",
            "orient": "bottom",
            "tickCount": 5,
            "title": "Cylinders",
            "zindex": 1,
            "encode": {
                "labels": {
                    "update": {
                        "angle": {
                            "value": 270
                        },
                        "align": {
                            "value": "right"
                        },
                        "baseline": {
                            "value": "middle"
                        }
                    }
                }
            }
        },
        {
            "scale": "y",
            "orient": "left",
            "title": "MAX(Horsepower), MIN(Horsepower)",
            "zindex": 1
        },
        {
            "scale": "y",
            "domain": false,
            "grid": true,
            "labels": false,
            "orient": "left",
            "ticks": false,
            "zindex": 0,
            "gridScale": "x"
        }
    ]
}
