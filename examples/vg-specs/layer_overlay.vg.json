                                "field": "Cylinders"
                            },
                            "y": {
                                "scale": "y",
                                "field": "min_Horsepower"
                            },
                            "fill": {
                                "value": "#4c78a8"
                            }
                        }
                    },
                    "clip": true
                }
            ]
        }
    ],
    "scales": [
        {
            "name": "x",
            "type": "point",
            "domain": {
                "fields": [
                    {
                        "data": "data_4",
                        "field": "Cylinders"
                    },
                    {
                        "data": "data_5",
                        "field": "Cylinders"
                    },
                    {
                        "data": "data_1",
                        "field": "Cylinders"
                    },
                    {
                        "data": "data_3",
                        "field": "Cylinders"
                    }
                ],
                "sort": true
            },
            "range": {
                "step": 21
            },
            "round": true,
            "padding": 0.5
        },
        {
            "name": "y",
            "type": "linear",
            "domain": {
                "fields": [
                    {
                        "data": "data_4",
                        "field": "max_Horsepower"
                    },
                    {
                        "data": "data_5",
                        "field": "max_Horsepower"
                    },
                    {
                        "data": "data_1",
                        "field": "min_Horsepower"
                    },
                    {
                        "data": "data_3",
                        "field": "min_Horsepower"
                    }
                ],
                "sort": true
            },
            "range": [
                200,
                0
            ],
            "round": true,
            "nice": true,
            "zero": true
        }
    ],
    "axes": [
        {
            "scale": "x",
            "orient": "bottom",
            "tickCount": 5,
            "title": "Cylinders",
            "zindex": 1,
            "encode": {
                "labels": {
                    "update": {
                        "angle": {
                            "value": 270
                        },
                        "align": {
                            "value": "right"
                        },
                        "baseline": {
                            "value": "middle"
                        }
                    }
                }
            }
        },
        {
            "scale": "y",
            "format": "s",
            "orient": "left",
            "title": "MAX(Horsepower)",
            "zindex": 1
        },
        {
            "scale": "y",
            "domain": false,
            "format": "s",
            "grid": true,
            "labels": false,
            "orient": "left",
            "ticks": false,
            "zindex": 0,
            "gridScale": "x"
        }
    ]
