{
    "$schema": "https://vega.github.io/schema/vega/v3.0.json",
    "autosize": "pad",
    "padding": 5,
    "encode": {
        "update": {
            "stroke": {
                "value": "#ccc"
            },
            "fill": {
                "value": "transparent"
            }
        }
    },
    "data": [
        {
            "name": "source_1",
            "url": "data/lookup_people.csv",
            "format": {
                "type": "csv"
            }
        },
        {
            "name": "source_0",
            "url": "data/lookup_groups.csv",
            "format": {
                "type": "csv"
            },
            "transform": [
                {
                    "type": "lookup",
                    "from": "source_1",
                    "key": "name",
                    "fields": [
                        "person"
                    ],
                    "values": [
                        "age",
                        "height"
                    ]
                },
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"age\"])",
                    "as": "age"
                },
                {
                    "type": "aggregate",
                    "groupby": [
                        "group"
                    ],
                    "ops": [
                        "mean"
                    ],
                    "fields": [
                        "age"
                    ],
                    "as": [
                        "mean_age"
                    ]
                }
            ]
        }
    ],
    "signals": [
        {
            "name": "x_step",
            "value": 21
        },
        {
            "name": "width",
            "update": "bandspace(domain('x').length, 0.1, 0.05) * x_step"
        },
        {
            "name": "height",
            "update": "200"
        }
    ],
    "marks": [
        {
            "name": "marks",
            "type": "rect",
            "role": "bar",
            "from": {
                "data": "source_0"
            },
            "encode": {
                "update": {
                    "x": {
                        "scale": "x",
                        "field": "group"
                    },
                    "width": {
                        "scale": "x",
                        "band": true
                    },
                    "y": {
                        "scale": "y",
                        "field": "mean_age"
                    },
                    "y2": {
                        "scale": "y",
                        "value": 0
                    },
                    "fill": {
                        "value": "#4c78a8"
                    }
                }
            }
        }
    ],
    "scales": [
        {
            "name": "x",
            "type": "band",
            "domain": {
                "data": "source_0",
                "field": "group",
                "sort": true
            },
            "range": {
                "step": {
                    "signal": "x_step"
                }
            },
            "round": true,
            "paddingInner": 0.1,
            "paddingOuter": 0.05
        },
        {
            "name": "y",
            "type": "linear",
            "domain": {
                "data": "source_0",
                "field": "mean_age"
            },
            "range": [
                {
                    "signal": "height"
                },
                0
            ],
            "round": true,
            "nice": true,
            "zero": true
        }
    ],
    "axes": [
        {
            "scale": "x",
            "orient": "bottom",
            "tickCount": 5,
            "title": "group",
            "zindex": 1,
            "encode": {
                "labels": {
                    "update": {
                        "angle": {
                            "value": 270
                        },
                        "align": {
                            "value": "right"
                        },
                        "baseline": {
                            "value": "middle"
                        }
                    }
                }
            }
        },
        {
            "scale": "y",
            "orient": "left",
            "title": "MEAN(age)",
            "zindex": 1
        },
        {
            "scale": "y",
            "domain": false,
            "grid": true,
            "labels": false,
            "maxExtent": 0,
            "minExtent": 0,
            "orient": "left",
            "ticks": false,
            "zindex": 0,
            "gridScale": "x"
        }
    ],
    "config": {
        "axis": {
            "minExtent": 30
        }
    }
}
