{
    "$schema": "https://vega.github.io/schema/vega/v3.0.json",
    "description": "Barchart for precipitation overlayed with linecharts to show temperature range.",
    "autosize": "pad",
    "padding": 5,
    "encode": {
        "update": {
            "fill": {
                "value": "transparent"
            }
        }
    },
    "data": [
        {
            "name": "source_0",
            "url": "data/seattle-weather.csv",
            "format": {
                "type": "csv"
            }
        },
        {
            "name": "data_0",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toDate(datum[\"date\"])",
                    "as": "date"
                },
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"precipitation\"])",
                    "as": "precipitation"
                },
                {
                    "type": "formula",
                    "as": "month_date",
                    "expr": "datetime(0, month(datum[\"date\"]), 1, 0, 0, 0, 0)"
                },
                {
                    "type": "aggregate",
                    "groupby": [
                        "month_date"
                    ],
                    "ops": [
                        "mean"
                    ],
                    "fields": [
                        "precipitation"
                    ],
                    "as": [
                        "mean_precipitation"
                    ]
                }
            ]
        },
        {
            "name": "data_1",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toDate(datum[\"date\"])",
                    "as": "date"
                },
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"temp_max\"])",
                    "as": "temp_max"
                },
                {
                    "type": "formula",
                    "as": "month_date",
                    "expr": "datetime(0, month(datum[\"date\"]), 1, 0, 0, 0, 0)"
                },
                {
                    "type": "aggregate",
                    "groupby": [
                        "month_date"
                    ],
                    "ops": [
                        "max"
                    ],
                    "fields": [
                        "temp_max"
                    ],
                    "as": [
                        "max_temp_max"
                    ]
                },
                {
                    "type": "collect",
                    "sort": {
                        "field": "month_date",
                        "order": "descending"
                    }
                }
            ]
        },
        {
            "name": "data_2",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toDate(datum[\"date\"])",
                    "as": "date"
                },
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"temp_min\"])",
                    "as": "temp_min"
                },
                {
                    "type": "formula",
                    "as": "month_date",
                    "expr": "datetime(0, month(datum[\"date\"]), 1, 0, 0, 0, 0)"
                },
                {
                    "type": "aggregate",
                    "groupby": [
                        "month_date"
                    ],
                    "ops": [
                        "min"
                    ],
                    "fields": [
                        "temp_min"
                    ],
                    "as": [
                        "min_temp_min"
                    ]
                },
                {
                    "type": "collect",
                    "sort": {
                        "field": "month_date",
                        "order": "descending"
                    }
                }
            ]
        }
    ],
    "signals": [
        {
            "name": "width",
            "update": "bandspace(domain('x').length, 0.1, 0.05) * 21"
        },
        {
            "name": "height",
            "update": "200"
        }
    ],
    "marks": [
        {
            "name": "layer_0_marks",
            "type": "rect",
            "role": "bar",
            "from": {
                "data": "data_0"
            },
            "encode": {
                "update": {
                    "x": {
                        "scale": "x",
                        "field": "month_date"
                    },
                    "width": {
                        "scale": "x",
                        "band": true
                    },
                    "y": {
                        "scale": "layer_0_y",
                        "field": "mean_precipitation"
                    },
                    "y2": {
                        "scale": "layer_0_y",
                        "value": 0
                    },
                    "fill": {
                        "value": "#4c78a8"
                    }
                }
            },
            "clip": true
        },
        {
            "name": "layer_1_layer_0_marks",
            "type": "line",
            "from": {
                "data": "data_1"
            },
            "encode": {
                "update": {
                    "x": {
                        "scale": "x",
                        "field": "month_date",
                        "band": 0.5
                    },
                    "y": {
                        "scale": "layer_1_y",
                        "field": "max_temp_max"
                    },
                    "stroke": {
                        "value": "firebrick"
                    }
                }
            },
            "clip": true
        },
        {
            "name": "layer_1_layer_1_marks",
            "type": "line",
            "from": {
                "data": "data_2"
            },
            "encode": {
                "update": {
                    "x": {
                        "scale": "x",
                        "field": "month_date",
                        "band": 0.5
                    },
                    "y": {
                        "scale": "layer_1_y",
                        "field": "min_temp_min"
                    },
                    "stroke": {
                        "value": "firebrick"
                    }
                }
            },
            "clip": true
        }
    ],
    "scales": [
        {
            "name": "x",
            "type": "band",
            "domain": {
                "fields": [
                    {
                        "data": "data_0",
                        "field": "month_date"
                    },
                    {
                        "data": "data_1",
                        "field": "month_date"
                    },
                    {
                        "data": "data_2",
                        "field": "month_date"
                    }
                ],
                "sort": true
            },
            "range": {
                "step": 21
            },
            "round": true,
            "paddingInner": 0.1,
            "paddingOuter": 0.05
        },
        {
            "name": "layer_0_y",
            "type": "linear",
            "domain": {
                "data": "data_0",
                "field": "mean_precipitation"
            },
            "range": [
                200,
                0
            ],
            "round": true,
            "nice": true,
            "zero": true
        },
        {
            "name": "layer_1_y",
            "type": "linear",
            "domain": {
                "fields": [
                    {
                        "data": "data_1",
                        "field": "max_temp_max"
                    },
                    {
                        "data": "data_2",
                        "field": "min_temp_min"
                    }
                ],
                "sort": true
            },
            "range": [
                200,
                0
            ],
            "zero": false,
            "round": true,
            "nice": true
        }
    ],
    "axes": [
        {
            "scale": "x",
            "orient": "bottom",
            "tickCount": 5,
            "title": "MONTH(date)",
            "zindex": 1,
            "encode": {
                "labels": {
                    "update": {
                        "text": {
                            "signal": "timeFormat(datum.value, '%b')"
                        },
                        "angle": {
                            "value": 270
                        },
                        "align": {
                            "value": "right"
                        },
                        "baseline": {
                            "value": "middle"
                        }
                    }
                }
            }
        },
        {
            "title": "Mean Precipitation",
            "scale": "layer_0_y",
            "orient": "left",
            "zindex": 1
        },
        {
            "title": "Temperature (min and max)",
            "scale": "layer_1_y",
            "orient": "right",
            "zindex": 1
        }
    ]
}
