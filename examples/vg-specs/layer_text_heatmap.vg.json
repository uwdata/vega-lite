{
    "$schema": "https://vega.github.io/schema/vega/v3.0.json",
    "autosize": "pad",
    "padding": 5,
    "encode": {
        "update": {
            "fill": {
                "value": "transparent"
            }
        }
    },
    "data": [
        {
            "name": "source_0",
            "url": "data/cars.json",
            "format": {
                "type": "json"
            }
        },
        {
            "name": "data_0",
            "source": "source_0",
            "transform": [
                {
                    "type": "aggregate",
                    "groupby": [
                        "Origin",
                        "Cylinders"
                    ],
                    "ops": [
                        "count"
                    ],
                    "fields": [
                        "*"
                    ],
                    "as": [
                        "count_*"
                    ]
                }
            ]
        },
        {
            "name": "data_1",
            "source": "source_0",
            "transform": [
                {
                    "type": "aggregate",
                    "groupby": [
                        "Origin",
                        "Cylinders"
                    ],
                    "ops": [
                        "count"
                    ],
                    "fields": [
                        "*"
                    ],
                    "as": [
                        "count_*"
                    ]
                }
            ]
        }
    ],
    "signals": [
        {
            "name": "width",
            "update": "bandspace(domain('x').length, 0, 0) * 90"
        },
        {
            "name": "height",
            "update": "bandspace(domain('y').length, 0, 0) * 21"
        }
    ],
    "marks": [
        {
            "name": "layer_0_marks",
            "type": "rect",
            "from": {
                "data": "data_0"
            },
            "encode": {
                "update": {
                    "x": {
                        "scale": "x",
                        "field": "Cylinders"
                    },
                    "width": {
                        "scale": "x",
                        "band": true
                    },
                    "y": {
                        "scale": "y",
                        "field": "Origin"
                    },
                    "height": {
                        "scale": "y",
                        "band": true
                    },
                    "fill": {
                        "scale": "color",
                        "field": "count_*"
                    }
                }
            },
            "clip": true
        },
        {
            "name": "layer_1_marks",
            "type": "text",
            "from": {
                "data": "data_1"
            },
            "encode": {
                "update": {
                    "x": {
                        "scale": "x",
                        "field": "Cylinders",
                        "band": 0.5
                    },
                    "y": {
                        "scale": "y",
                        "field": "Origin",
                        "band": 0.5
                    },
                    "text": {
                        "signal": "format(datum[\"count_*\"], '')"
                    },
                    "fill": {
                        "value": "white"
                    },
                    "align": {
                        "value": "center"
                    }
                }
            },
            "clip": true
        }
    ],
    "scales": [
        {
            "name": "x",
            "type": "band",
            "domain": {
                "fields": [
                    {
                        "data": "data_0",
                        "field": "Cylinders"
                    },
                    {
                        "data": "data_1",
                        "field": "Cylinders"
                    }
                ],
                "sort": true
            },
            "range": {
                "step": 90
            },
            "round": true,
            "paddingInner": 0,
            "paddingOuter": 0
        },
        {
            "name": "y",
            "type": "band",
            "domain": {
                "fields": [
                    {
                        "data": "data_0",
                        "field": "Origin"
                    },
                    {
                        "data": "data_1",
                        "field": "Origin"
                    }
                ],
                "sort": true
            },
            "range": {
                "step": 21
            },
            "round": true,
            "paddingInner": 0,
            "paddingOuter": 0
        },
        {
            "name": "color",
            "type": "sequential",
            "domain": {
                "data": "data_0",
                "field": "count_*"
            },
            "range": "heatmap",
            "nice": false,
            "zero": false
        }
    ],
    "axes": [
        {
            "scale": "x",
            "orient": "bottom",
            "tickCount": 5,
            "title": "Cylinders",
            "zindex": 1,
            "encode": {
                "labels": {
                    "update": {
                        "angle": {
                            "value": 270
                        },
                        "align": {
                            "value": "right"
                        },
                        "baseline": {
                            "value": "middle"
                        }
                    }
                }
            }
        },
        {
            "scale": "y",
            "orient": "left",
            "title": "Origin",
            "zindex": 1
        }
    ],
    "legends": [
        {
            "fill": "color",
            "title": "Number of Records",
            "type": "gradient"
        }
    ],
    "config": {
        "text": {
            "baseline": "middle"
        }
    }
}
