{
    "$schema": "http://vega.github.io/schema/vega/v3.0.json",
    "padding": 5,
    "autosize": "pad",
    "signals": [
        {
            "name": "width",
            "update": "data('layout')[0].width"
        },
        {
            "name": "height",
            "update": "data('layout')[0].height"
        },
        {
            "name": "unit",
            "value": {},
            "on": [
                {
                    "events": "mousemove",
                    "update": "group()._id ? group() : unit"
                }
            ]
        }
    ],
    "data": [
        {
            "name": "source",
            "url": "data/cars.json",
            "format": {
                "type": "json",
                "parse": {
                    "Horsepower": "number",
                    "Miles_per_Gallon": "number",
                    "Acceleration": "number"
                }
            },
            "transform": [
                {
                    "type": "filter",
                    "expr": "datum[\"Horsepower\"] !== null && !isNaN(datum[\"Horsepower\"]) && datum[\"Miles_per_Gallon\"] !== null && !isNaN(datum[\"Miles_per_Gallon\"]) && datum[\"Acceleration\"] !== null && !isNaN(datum[\"Acceleration\"])"
                },
                {
                    "type": "extent",
                    "field": "Acceleration",
                    "signal": "Acceleration_extent"
                },
                {
                    "type": "bin",
                    "field": "Acceleration",
                    "as": [
                        "bin_Acceleration_start",
                        "bin_Acceleration_end"
                    ],
                    "signal": "Acceleration_bins",
                    "maxbins": 5,
                    "extent": {
                        "signal": "Acceleration_extent"
                    }
                },
                {
                    "type": "formula",
                    "as": "bin_Acceleration_range",
                    "expr": "format(datum[\"bin_Acceleration_start\"], 's') + ' - ' + format(datum[\"bin_Acceleration_end\"], 's')"
                }
            ]
        },
        {
            "name": "layout",
            "values": [
                {}
            ],
            "transform": [
                {
                    "type": "formula",
                    "as": "width",
                    "expr": "200"
                },
                {
                    "type": "formula",
                    "as": "height",
                    "expr": "200"
                }
            ]
        }
    ],
    "marks": [
        {
            "name": "main",
            "type": "group",
            "description": "A scatterplot showing horsepower and miles per gallons with binned acceleration on color.",
            "from": {
                "data": "layout"
            },
            "encode": {
                "update": {
                    "width": {
                        "field": "width"
                    },
                    "height": {
                        "field": "height"
                    },
                    "fill": {
                        "value": "transparent"
                    }
                }
            },
            "marks": [
                {
                    "name": "marks",
                    "type": "symbol",
                    "role": "point",
                    "from": {
                        "data": "source"
                    },
                    "encode": {
                        "update": {
                            "x": {
                                "scale": "x",
                                "field": "Horsepower"
                            },
                            "y": {
                                "scale": "y",
                                "field": "Miles_per_Gallon"
                            },
                            "stroke": {
                                "scale": "color",
                                "field": "bin_Acceleration_start"
                            },
                            "fill": {
                                "value": "transparent"
                            },
                            "opacity": {
                                "value": 0.7
                            }
                        }
                    }
                }
            ],
            "scales": [
                {
                    "name": "x",
                    "type": "linear",
                    "domain": {
                        "data": "source",
                        "field": "Horsepower"
                    },
                    "range": [
                        0,
                        200
                    ],
                    "round": true,
                    "nice": true,
                    "zero": true
                },
                {
                    "name": "y",
                    "type": "linear",
                    "domain": {
                        "data": "source",
                        "field": "Miles_per_Gallon"
                    },
                    "range": [
                        200,
                        0
                    ],
                    "round": true,
                    "nice": true,
                    "zero": true
                },
                {
                    "name": "color",
                    "type": "bin-ordinal",
                    "domain": {
                        "signal": "sequence(Acceleration_bins.start, Acceleration_bins.stop + Acceleration_bins.step, Acceleration_bins.step)"
                    },
                    "range": "ramp",
                    "zero": false
                }
            ],
            "axes": [
                {
                    "scale": "x",
                    "format": "s",
                    "orient": "bottom",
                    "tickCount": 5,
                    "title": "Horsepower",
                    "zindex": 1
                },
                {
                    "scale": "x",
                    "domain": false,
                    "format": "s",
                    "grid": true,
                    "labels": false,
                    "orient": "bottom",
                    "tickCount": 5,
                    "ticks": false,
                    "zindex": 0,
                    "gridScale": "y"
                },
                {
                    "scale": "y",
                    "format": "s",
                    "orient": "left",
                    "title": "Miles_per_Gallon",
                    "zindex": 1
                },
                {
                    "scale": "y",
                    "domain": false,
                    "format": "s",
                    "grid": true,
                    "labels": false,
                    "orient": "left",
                    "ticks": false,
                    "zindex": 0,
                    "gridScale": "x"
                }
            ],
            "legends": [
                {
                    "stroke": "color",
                    "format": "s",
                    "title": "BIN(Acceleration)"
                }
            ]
        }
    ]
}