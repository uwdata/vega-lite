{
    "$schema": "https://vega.github.io/schema/vega/v3.0.json",
    "autosize": "pad",
    "padding": 5,
    "encode": {
        "update": {
            "fill": {
                "value": "transparent"
            }
        }
    },
    "data": [
        {
            "name": "source_0",
            "url": "data/cars.json",
            "format": {
                "type": "json",
                "parse": {
                    "Horsepower": "number"
                }
            }
        },
        {
            "name": "data_0",
            "source": "source_0",
            "transform": [
                {
                    "type": "aggregate",
                    "groupby": [
                        "Origin"
                    ],
                    "ops": [
                        "mean"
                    ],
                    "fields": [
                        "Horsepower"
                    ],
                    "as": [
                        "mean_Horsepower"
                    ]
                }
            ]
        }
    ],
    "signals": [
        {
            "name": "width",
            "update": "200"
        },
        {
            "name": "y_step",
            "value": 21
        },
        {
            "name": "height",
            "update": "bandspace(domain('y').length, 0.1, 0.05) * y_step"
        }
    ],
    "marks": [
        {
            "name": "marks",
            "type": "rect",
            "role": "bar",
            "from": {
                "data": "data_0"
            },
            "encode": {
                "update": {
                    "x": {
                        "scale": "x",
                        "field": "mean_Horsepower"
                    },
                    "x2": {
                        "scale": "x",
                        "value": 0
                    },
                    "y": {
                        "scale": "y",
                        "field": "Origin"
                    },
                    "height": {
                        "scale": "y",
                        "band": true
                    },
                    "fill": {
                        "value": "#4c78a8"
                    }
                }
            }
        }
    ],
    "scales": [
        {
            "name": "x",
            "type": "linear",
            "domain": {
                "data": "data_0",
                "field": "mean_Horsepower"
            },
            "range": [
                0,
                200
            ],
            "round": true,
            "nice": true,
            "zero": true
        },
        {
            "name": "y",
            "type": "band",
            "domain": {
                "data": "source_0",
                "field": "Origin",
                "sort": {
                    "op": "mean",
                    "field": "Horsepower"
                }
            },
            "range": {
                "step": {
                    "signal": "y_step"
                }
            },
            "round": true,
            "paddingInner": 0.1,
            "paddingOuter": 0.05
        }
    ],
    "axes": [
        {
            "scale": "x",
            "labelOverlap": true,
            "orient": "bottom",
            "tickCount": 5,
            "title": "MEAN(Horsepower)",
            "zindex": 1
        },
        {
            "scale": "x",
            "domain": false,
            "grid": true,
            "labels": false,
            "orient": "bottom",
            "tickCount": 5,
            "ticks": false,
            "zindex": 0,
            "gridScale": "y"
        },
        {
            "scale": "y",
            "orient": "left",
            "title": "Origin",
            "zindex": 1
        }
    ]
}
