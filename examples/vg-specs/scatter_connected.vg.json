{
    "$schema": "https://vega.github.io/schema/vega/v3.0.json",
    "autosize": "pad",
    "padding": 5,
    "encode": {
        "update": {
            "fill": {
                "value": "transparent"
            }
        }
    },
    "data": [
        {
            "name": "source_0",
            "url": "data/driving.json",
            "format": {
                "type": "json"
            }
        },
        {
            "name": "data_0",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"miles\"])",
                    "as": "miles"
                },
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"gas\"])",
                    "as": "gas"
                },
                {
                    "type": "formula",
                    "expr": "toDate(datum[\"year\"])",
                    "as": "year"
                },
                {
                    "type": "filter",
                    "expr": "datum[\"miles\"] !== null && !isNaN(datum[\"miles\"]) && datum[\"gas\"] !== null && !isNaN(datum[\"gas\"])"
                },
                {
                    "type": "collect",
                    "sort": {
                        "field": [
                            "year"
                        ],
                        "order": [
                            "ascending"
                        ]
                    }
                }
            ]
        },
        {
            "name": "data_1",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"miles\"])",
                    "as": "miles"
                },
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"gas\"])",
                    "as": "gas"
                },
                {
                    "type": "formula",
                    "expr": "toDate(datum[\"year\"])",
                    "as": "year"
                },
                {
                    "type": "filter",
                    "expr": "datum[\"miles\"] !== null && !isNaN(datum[\"miles\"]) && datum[\"gas\"] !== null && !isNaN(datum[\"gas\"])"
                }
            ]
        }
    ],
    "signals": [
        {
            "name": "width",
            "update": "200"
        },
        {
            "name": "height",
            "update": "200"
        }
    ],
    "marks": [
        {
            "name": "layer_0_marks",
            "type": "line",
            "from": {
                "data": "data_0"
            },
            "encode": {
                "update": {
                    "x": {
                        "scale": "x",
                        "field": "miles"
                    },
                    "y": {
                        "scale": "y",
                        "field": "gas"
                    },
                    "stroke": {
                        "value": "#4c78a8"
                    }
                }
            },
            "clip": true
        },
        {
            "name": "layer_1_marks",
            "type": "symbol",
            "role": "pointOverlay",
            "from": {
                "data": "data_1"
            },
            "encode": {
                "update": {
                    "x": {
                        "scale": "x",
                        "field": "miles"
                    },
                    "y": {
                        "scale": "y",
                        "field": "gas"
                    },
                    "fill": {
                        "value": "#4c78a8"
                    },
                    "opacity": {
                        "value": 0.7
                    }
                }
            },
            "clip": true
        }
    ],
    "scales": [
        {
            "name": "x",
            "type": "linear",
            "domain": {
                "fields": [
                    {
                        "data": "data_0",
                        "field": "miles"
                    },
                    {
                        "data": "data_1",
                        "field": "miles"
                    }
                ],
                "sort": true
            },
            "range": [
                0,
                200
            ],
            "zero": false,
            "round": true,
            "nice": true
        },
        {
            "name": "y",
            "type": "linear",
            "domain": {
                "fields": [
                    {
                        "data": "data_0",
                        "field": "gas"
                    },
                    {
                        "data": "data_1",
                        "field": "gas"
                    }
                ],
                "sort": true
            },
            "range": [
                200,
                0
            ],
            "zero": false,
            "round": true,
            "nice": true
        }
    ],
    "axes": [
        {
            "scale": "x",
            "labelOverlap": true,
            "orient": "bottom",
            "tickCount": 5,
            "title": "miles",
            "zindex": 1
        },
        {
            "scale": "x",
            "domain": false,
            "grid": true,
            "labels": false,
            "orient": "bottom",
            "tickCount": 5,
            "ticks": false,
            "zindex": 0,
            "gridScale": "y"
        },
        {
            "scale": "y",
            "orient": "left",
            "title": "gas",
            "zindex": 1
        },
        {
            "scale": "y",
            "domain": false,
            "grid": true,
            "labels": false,
            "orient": "left",
            "ticks": false,
            "zindex": 0,
            "gridScale": "x"
        }
    ]
}
