{
  "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
  "data": {
    "url": "data/sf-temps.csv"
  },
  "config": {
    "scale": {
      "rangeStep": 13
    }
  },
  "mark": "rect",
  "encoding": {
    "x": {
      "field": "date",
      "timeUnit": "date",
      "type": "ordinal",
      "title": "day"
    },
    "y": {
      "field": "date",
      "timeUnit": "month",
      "type": "ordinal",
      "title": "month"
    },
    "color": {
      "field": "temp",
      "aggregate": "max",
      "type": "quantitative"
    }
  }
}