{
  "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
  "description": "Credits to @jakevdp. The example is forked/modified from his block (https://bl.ocks.org/jakevdp/a414950f61e4b224765f2439dd1f09b9).",
  "data": {
    "url": "data/stocks.csv",
    "format": {
      "type": "csv"
    }
  },
  "width": 800,
  "height": 400,
  "layer": [
    {
      "mark": "line",
      "encoding": {
        "color": {
          "type": "nominal",
          "field": "symbol"
        },
        "x": {
          "type": "temporal",
          "field": "date"
        },
        "y": {
          "type": "quantitative",
          "field": "price"
        }
      }
    },
    {
      "mark": "point",
      "encoding": {
        "color": {
          "type": "nominal",
          "field": "symbol"
        },
        "opacity": {
          "condition": {
            "selection": "tooltip",
            "value": 1
          },
          "value": 0
        },
        "x": {
          "type": "temporal",
          "field": "date"
        },
        "y": {
          "type": "quantitative",
          "field": "price"
        }
      },
      "selection": {
        "tooltip": {
          "type": "single",
          "nearest": true,
          "on": "mouseover",
          "encodings": [
            "x"
          ],
          "empty": "none"
        }
      }
    },
    {
      "transform": [
        {
          "filter": {
            "selection": "tooltip"
          }
        }
      ],
      "mark": {
       "type": "rule",
       "color": "gray"
     },
     "encoding": {
       "x": {
         "type": "temporal",
         "field": "date"
       }
     }
   },
   {
     "transform": [
      {
        "filter" : {
          "selection": "tooltip"
        }
      }
     ],
     "mark": {
       "type": "text",
       "align": "left",
       "dx": 5,
       "dy": -5
     },
     "encoding": {
       "text": {
         "type": "quantitative",
         "field": "price"
       },
       "color": {
         "type": "nominal",
         "field": "symbol"
       },
       "x": {
         "type": "temporal",
         "field": "date"
       },
       "y": {
         "type": "quantitative",
         "field": "price"
       }
     }
   }
 ]
}
