{
  "data": {
    "url": "data/flights-2k.json",
    "format": {"parse": {"date": "date"}}
  },
  "align": "all",
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "transform": [{"calculate": "hours(datum.date)", "as": "time"}],
  "columns": 3,
  "concat": [
    {
      "layer": [
        {
          "selection": {"brush": {"type": "interval", "encodings": ["x"]}},
          "mark": "bar",
          "encoding": {
            "x": {
              "field": "distance",
              "bin": {"maxbins": 20},
              "type": "quantitative"
            },
            "y": {"aggregate": "count", "type": "quantitative"},
            "color": {"value": "#ddd"}
          }
        },
        {
          "transform": [{"filter": {"selection": "brush"}}],
          "mark": "bar",
          "encoding": {
            "x": {
              "field": "distance",
              "bin": {"maxbins": 20},
              "type": "quantitative"
            },
            "y": {"aggregate": "count", "type": "quantitative"}
          }
        }
      ],
      "name": "child__repeat_column_distance"
    },
    {
      "layer": [
        {
          "selection": {"brush": {"type": "interval", "encodings": ["x"]}},
          "mark": "bar",
          "encoding": {
            "x": {
              "field": "delay",
              "bin": {"maxbins": 20},
              "type": "quantitative"
            },
            "y": {"aggregate": "count", "type": "quantitative"},
            "color": {"value": "#ddd"}
          }
        },
        {
          "transform": [{"filter": {"selection": "brush"}}],
          "mark": "bar",
          "encoding": {
            "x": {
              "field": "delay",
              "bin": {"maxbins": 20},
              "type": "quantitative"
            },
            "y": {"aggregate": "count", "type": "quantitative"}
          }
        }
      ],
      "name": "child__repeat_column_delay"
    },
    {
      "layer": [
        {
          "selection": {"brush": {"type": "interval", "encodings": ["x"]}},
          "mark": "bar",
          "encoding": {
            "x": {
              "field": "time",
              "bin": {"maxbins": 20},
              "type": "quantitative"
            },
            "y": {"aggregate": "count", "type": "quantitative"},
            "color": {"value": "#ddd"}
          }
        },
        {
          "transform": [{"filter": {"selection": "brush"}}],
          "mark": "bar",
          "encoding": {
            "x": {
              "field": "time",
              "bin": {"maxbins": 20},
              "type": "quantitative"
            },
            "y": {"aggregate": "count", "type": "quantitative"}
          }
        }
      ],
      "name": "child__repeat_column_time"
    }
  ]
}