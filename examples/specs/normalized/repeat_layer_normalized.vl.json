        {
          "mark": "line",
          "encoding": {
            "y": {"aggregate": "mean", "field": "wind", "type": "quantitative"},
            "x": {"timeUnit": "month", "field": "date", "type": "ordinal"},
            "detail": {"timeUnit": "year", "type": "temporal", "field": "date"},
