{
  "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
  "data": {
    "url": "data/seattle-weather.csv"
  },
  "transform": [
    {
      "calculate": "datum.temp_max - datum.temp_min",
      "as": "temp_range"
    }
  ],
  "layer": [
    {
      "mark": "line",
      "encoding": {
        "x": {
          "timeUnit": "month",
          "field": "date",
          "type": "temporal"
        },
        "y": {
          "aggregate": "mean",
          "field": "temp_range",
          "type": "quantitative"
        }
      }
    },
    {
      "mark": {
        "type": "point",
        "filled": true,
        "opacity": 0
      },
      "encoding": {
        "x": {
          "timeUnit": "month",
          "field": "date",
          "type": "temporal"
        },
        "y": {
          "aggregate": "mean",
          "field": "temp_range",
          "type": "quantitative"
        }
      }
    }
  ]
}