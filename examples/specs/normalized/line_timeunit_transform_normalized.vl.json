{
  "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
  "description": "Google's stock price over time. Used to demonstrate the time unit transform.",
  "data": {
    "url": "data/seattle-weather.csv"
  },
  "transform": [
    {
      "timeUnit": "month",
      "field": "date",
      "as": "month"
    }
  ],
  "layer": [
    {
      "mark": "line",
      "encoding": {
        "x": {
          "field": "month",
          "type": "temporal",
          "axis": {
            "format": "%b"
          }
        },
        "y": {
          "aggregate": "max",
          "field": "temp_max",
          "type": "quantitative"
        }
      }
    },
    {
      "mark": {
        "type": "point",
        "filled": true,
        "opacity": 0
      },
      "encoding": {
        "x": {
          "field": "month",
          "type": "temporal",
          "axis": {
            "format": "%b"
          }
        },
        "y": {
          "aggregate": "max",
          "field": "temp_max",
          "type": "quantitative"
        }
      }
    }
  ]
}