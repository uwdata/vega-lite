{
  "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
  "description": "Area chart showing weight of cars over time (vertical).",
  "data": {
    "url": "data/cars.json"
  },
  "layer": [
    {
      "mark": {
        "type": "area",
        "interpolate": "monotone"
      },
      "encoding": {
        "x": {
          "aggregate": "sum",
          "field": "Weight_in_lbs",
          "type": "quantitative"
        },
        "y": {
          "timeUnit": "year",
          "field": "Year",
          "type": "temporal"
        }
      }
    },
    {
      "mark": {
        "type": "point",
        "filled": true,
        "opacity": 0
      },
      "encoding": {
        "x": {
          "aggregate": "sum",
          "field": "Weight_in_lbs",
          "type": "quantitative"
        },
        "y": {
          "timeUnit": "year",
          "field": "Year",
          "type": "temporal"
        }
      }
    }
  ]
}