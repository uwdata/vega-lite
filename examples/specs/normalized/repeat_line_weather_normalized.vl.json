{
  "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
  "description": "",
  "data": {
    "url": "data/weather.csv"
  },
  "repeat": {
    "column": [
      "temp_max",
      "precipitation",
      "wind"
    ]
  },
  "spec": {
    "layer": [
      {
        "mark": "line",
        "encoding": {
          "x": {
            "field": "date",
            "timeUnit": "month",
            "type": "temporal"
          },
          "y": {
            "field": {
              "repeat": "column"
            },
            "type": "quantitative",
            "aggregate": "mean"
          },
          "color": {
            "field": "location",
            "type": "nominal"
          }
        }
      },
      {
        "mark": {
          "type": "point",
          "filled": true,
          "opacity": 0
        },
        "encoding": {
          "x": {
            "field": "date",
            "timeUnit": "month",
            "type": "temporal"
          },
          "y": {
            "field": {
              "repeat": "column"
            },
            "type": "quantitative",
            "aggregate": "mean"
          },
          "color": {
            "field": "location",
            "type": "nominal"
          }
        }
      }
    ]
  }
}