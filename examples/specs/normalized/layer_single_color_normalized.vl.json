{
  "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
  "data": {
    "url": "data/stocks.csv"
  },
  "layer": [
    {
      "layer": [
        {
          "mark": "line",
          "encoding": {
            "x": {
              "field": "date",
              "type": "temporal"
            },
            "y": {
              "field": "price",
              "type": "quantitative"
            },
            "color": {
              "field": "symbol",
              "type": "nominal"
            }
          }
        },
        {
          "mark": {
            "type": "point",
            "filled": true,
            "opacity": 0
          },
          "encoding": {
            "x": {
              "field": "date",
              "type": "temporal"
            },
            "y": {
              "field": "price",
              "type": "quantitative"
            },
            "color": {
              "field": "symbol",
              "type": "nominal"
            }
          }
        }
      ]
    }
  ]
}