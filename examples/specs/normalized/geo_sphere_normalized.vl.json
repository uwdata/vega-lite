{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  "width": 500,
  "height": 500,
  "layer": [
    {
      "data": {"sphere": true},
      "mark": {"type": "geoshape", "fill": "aliceblue"},
      "projection": {
        "type": "orthographic",
        "scale": 250,
        "translate": [250, 250]
      }
    },
    {
      "data": {"graticule": true},
      "mark": {"type": "geoshape", "stroke": "black"},
      "projection": {
        "type": "orthographic",
        "scale": 250,
        "translate": [250, 250]
      }
    }
  ]
}