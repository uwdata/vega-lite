{
  "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
  "data": {
    "url": "data/barley.json"
  },
  "transform": [
    {
      "aggregate": [
        {
          "op": "stderr",
          "field": "yield",
          "as": "extent_yield"
        },
        {
          "op": "mean",
          "field": "yield",
          "as": "center_yield"
        }
      ],
      "groupby": [
        "variety"
      ]
    },
    {
      "calculate": "datum.center_yield + datum.extent_yield",
      "as": "upper_yield"
    },
    {
      "calculate": "datum.center_yield - datum.extent_yield",
      "as": "lower_yield"
    }
  ],
  "layer": [
    {
      "mark": {
        "opacity": 0.5,
        "type": "area",
        "style": "errorband-band"
      },
      "encoding": {
        "y": {
          "field": "lower_yield",
          "type": "quantitative",
          "title": "Barley Yield",
          "scale": {
            "zero": false
          }
        },
        "y2": {
          "field": "upper_yield",
          "type": "quantitative"
        },
        "x": {
          "field": "variety",
          "type": "ordinal",
          "title": "variety"
        }
      }
    },
    {
      "mark": {
        "type": "line",
        "style": "errorband-borders"
      },
      "encoding": {
        "y": {
          "field": "lower_yield",
          "type": "quantitative",
          "title": "Barley Yield",
          "scale": {
            "zero": false
          }
        },
        "x": {
          "field": "variety",
          "type": "ordinal",
          "title": "variety"
        }
      }
    },
    {
      "mark": {
        "type": "line",
        "style": "errorband-borders"
      },
      "encoding": {
        "y": {
          "field": "upper_yield",
          "type": "quantitative",
          "title": "Barley Yield",
          "scale": {
            "zero": false
          }
        },
        "x": {
          "field": "variety",
          "type": "ordinal",
          "title": "variety"
        }
      }
    }
  ]
}