{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {"url": "data/penguins_size.csv"},
  "repeat": {
    "row": ["culmen_length_mm", "culmen_depth_mm", "flipper_length_mm", "body_mass_g"],
    "column": ["body_mass_g", "flipper_length_mm", "culmen_depth_mm", "culmen_length_mm"]
  },
  "spec": {

    "width": 150,
    "height": 150,
    "mark": "point",
    "encoding": {
      "x": {
        "field": {"repeat": "column"},
        "type": "quantitative",
        "scale": {"zero": false}
      },
      "y": {
        "field": {"repeat": "row"},
        "type": "quantitative",
        "scale": {"zero": false}
      },
      "color": {"field": "species", "type": "nominal"}
    }
  }
}
