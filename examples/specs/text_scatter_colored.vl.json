{
  "data": {"url": "data/cars.json"},
  "transform": {
    "calculate": [{
      "as": "OriginInitial",
      "expr": "datum.Origin[0]"
    }]
  },
  "mark": "text",
  "encoding": {
    "x": {"field": "Horsepower", "type": "quantitative"},
    "y": {"field": "Miles_per_Gallon", "type": "quantitative"},
    "color": {"field": "Origin", "type": "nominal"},
    "text": {"field": "OriginInitial", "type": "nominal"}
  }
}
