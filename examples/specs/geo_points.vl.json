{
  "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
  "data": {
    "url": "data/demo-airports.csv"
  },
  "mark": "point",
  "projection": {
    "type": "albersUsa",
    "scale": 1000,
    "translate": [400, 250],
    "center": [0, 0]
  },
  "encoding": {
    "x": {
      "field": "longitude",
      "type": "longitude"
    },
    "y": {
      "field": "latitude",
      "type": "latitude"
    }
  },
  "config": {
    "mark": {
      "filled": true
    },
    "cell": {
      "width": 800,
      "height": 500
    }
  }
}
