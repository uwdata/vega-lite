{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {"url": "data/cars.json"},
  "selection": [{"name": "pts", "select": "interval"}],
  "mark": "rect",
  "encoding": {
    "y": {"field": "Origin"},
    "x": {"field": "Cylinders"},
    "color": {
      "condition": {
        "selection": {"not": "pts"},
        "value": "grey"
      },
      "aggregate": "count"
    }
  }
}
