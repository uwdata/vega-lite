{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 400,
  "height": 80,
  "data": {
    "url": "data/penguins_size.csv"
  },
  "mark": "area",
  "transform": [
    {
      "density": "body_mass_g",
      "groupby": ["species"],
      "extent": [2500, 6500]
    }
  ],
  "encoding": {
    "x": {"field": "value", "type": "quantitative"},
    "y": {"field": "density", "type": "quantitative", "stack": "zero"},
    "color": {"field": "species", "type": "nominal"}
  }
}
