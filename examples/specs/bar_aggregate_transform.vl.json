{
  "$schema": "https://vega.github.io/schema/Vegemite/v2.json",
  "data": { "url": "data/cars.json" },
  "transform": [
    {
      "aggregate": [{
       "op": "mean",
       "field": "Acceleration",
       "as": "mean_acc"
      }],
      "groupby": ["Cylinders"]
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": { "field": "Cylinders", "type": "ordinal" },
    "y": { "field": "mean_acc", "type": "quantitative" }
  }
}