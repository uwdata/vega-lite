{
    "$schema": "https://vega.github.io/schema/vega/v3.0.json",
    "autosize": "pad",
    "padding": 5,
    "style": "cell",
    "data": [
        {
            "name": "source_0",
            "url": "data/cars.json",
            "format": {
                "type": "json",
                "parse": {
                    "Horsepower": "number",
                    "Acceleration": "number"
                }
            },
            "transform": [
                {
                    "type": "filter",
                    "expr": "datum[\"Acceleration\"] !== null && !isNaN(datum[\"Acceleration\"])"
                },
                {
                    "type": "extent",
                    "field": "Acceleration",
                    "signal": "bin_maxbins_10_Acceleration_extent"
                },
                {
                    "type": "bin",
                    "field": "Acceleration",
                    "as": [
                        "bin_maxbins_10_Acceleration",
                        "bin_maxbins_10_Acceleration_end"
                    ],
                    "signal": "bin_maxbins_10_Acceleration_bins",
                    "maxbins": 10,
                    "extent": {
                        "signal": "bin_maxbins_10_Acceleration_extent"
                    }
                },
                {
                    "type": "aggregate",
                    "groupby": [
                        "Cylinders",
                        "bin_maxbins_10_Acceleration",
                        "bin_maxbins_10_Acceleration_end"
                    ],
                    "ops": [
                        "sum"
                    ],
                    "fields": [
                        "Horsepower"
                    ],
                    "as": [
                        "sum_Horsepower"
                    ]
                },
                {
                    "type": "formula",
                    "expr": "(datum[\"bin_maxbins_10_Acceleration\"]+datum[\"bin_maxbins_10_Acceleration_end\"])/2",
                    "as": "bin_maxbins_10_Acceleration_mid"
                },
                {
                    "type": "impute",
                    "field": "sum_Horsepower",
                    "groupby": [
                        "Cylinders"
                    ],
                    "key": "bin_maxbins_10_Acceleration_mid",
                    "method": "value",
                    "value": 0
                },
                {
                    "type": "stack",
                    "groupby": [
                        "bin_maxbins_10_Acceleration_mid"
                    ],
                    "field": "sum_Horsepower",
                    "sort": {
                        "field": [
                            "Cylinders"
                        ],
                        "order": [
                            "descending"
                        ]
                    },
                    "as": [
                        "sum_Horsepower_start",
                        "sum_Horsepower_end"
                    ],
                    "offset": "zero"
                }
            ]
        }
    ],
    "signals": [
        {
            "name": "width",
            "update": "200"
        },
        {
            "name": "height",
            "update": "200"
        }
    ],
    "marks": [
        {
            "name": "pathgroup",
            "type": "group",
            "from": {
                "facet": {
                    "name": "faceted_path_main",
                    "data": "source_0",
                    "groupby": [
                        "Cylinders"
                    ]
                }
            },
            "encode": {
                "update": {
                    "width": {
                        "field": {
                            "group": "width"
                        }
                    },
                    "height": {
                        "field": {
                            "group": "height"
                        }
                    }
                }
            },
            "marks": [
                {
                    "name": "marks",
                    "type": "area",
                    "style": [
                        "area"
                    ],
                    "sort": {
                        "field": "datum[\"bin_maxbins_10_Acceleration_mid\"]",
                        "order": "descending"
                    },
                    "from": {
                        "data": "faceted_path_main"
                    },
                    "encode": {
                        "update": {
                            "x": {
                                "scale": "x",
                                "field": "bin_maxbins_10_Acceleration_mid"
                            },
                            "y": {
                                "scale": "y",
                                "field": "sum_Horsepower_end"
                            },
                            "y2": {
                                "scale": "y",
                                "field": "sum_Horsepower_start"
                            },
                            "fill": {
                                "scale": "color",
                                "field": "Cylinders"
                            },
                            "orient": {
                                "value": "vertical"
                            }
                        }
                    }
                }
            ]
        }
    ],
    "scales": [
        {
            "name": "x",
            "type": "linear",
            "domain": {
                "data": "source_0",
                "fields": [
                    "bin_maxbins_10_Acceleration",
                    "bin_maxbins_10_Acceleration_end"
                ],
                "sort": true
            },
            "range": [
                0,
                {
                    "signal": "width"
                }
            ],
            "round": true,
            "zero": false
        },
        {
            "name": "y",
            "type": "linear",
            "domain": {
                "data": "source_0",
                "fields": [
                    "sum_Horsepower_start",
                    "sum_Horsepower_end"
                ],
                "sort": true
            },
            "range": [
                {
                    "signal": "height"
                },
                0
            ],
            "round": true,
            "nice": true,
            "zero": true
        },
        {
            "name": "color",
            "type": "ordinal",
            "domain": {
                "data": "source_0",
                "field": "Cylinders",
                "sort": true
            },
            "range": "category"
        }
    ],
    "axes": [
        {
            "scale": "x",
            "labelOverlap": true,
            "orient": "bottom",
            "title": "BIN(Acceleration)",
            "values": {
                "signal": "sequence(bin_maxbins_10_Acceleration_bins.start, bin_maxbins_10_Acceleration_bins.stop + bin_maxbins_10_Acceleration_bins.step, bin_maxbins_10_Acceleration_bins.step)"
            },
            "zindex": 1,
            "encode": {
                "labels": {
                    "update": {
                        "angle": {
                            "value": 270
                        },
                        "align": {
                            "value": "right"
                        },
                        "baseline": {
                            "value": "middle"
                        }
                    }
                }
            }
        },
        {
            "scale": "y",
            "labelOverlap": true,
            "orient": "left",
            "tickCount": {
                "signal": "ceil(height/40)"
            },
            "title": "SUM(Horsepower)",
            "zindex": 1
        },
        {
            "scale": "y",
            "domain": false,
            "grid": true,
            "labels": false,
            "maxExtent": 0,
            "minExtent": 0,
            "orient": "left",
            "tickCount": {
                "signal": "ceil(height/40)"
            },
            "ticks": false,
            "zindex": 0,
            "gridScale": "x"
        }
    ],
    "legends": [
        {
            "fill": "color",
            "title": "Cylinders"
        }
    ],
    "config": {
        "axis": {
            "domainColor": "#888",
            "tickColor": "#888"
        },
        "axisY": {
            "minExtent": 30
        }
    }
}
