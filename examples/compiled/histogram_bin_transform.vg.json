{
  "$schema": "https://vega.github.io/schema/vega/v4.json",
  "autosize": "pad",
  "padding": 5,
  "width": 200,
  "height": 200,
  "style": "cell",
  "data": [
    {
      "name": "source_0",
      "url": "data/movies.json",
      "format": {"type": "json"},
      "transform": [
        {
          "type": "extent",
          "field": "IMDB_Rating",
          "signal": "bin_maxbins_10_IMDB_Rating_extent"
        },
        {
          "type": "bin",
          "field": "IMDB_Rating",
          "as": ["bin_IMDB_Rating", "bin_IMDB_Rating_end"],
          "signal": "bin_maxbins_10_IMDB_Rating_bins",
          "maxbins": 10,
          "extent": {"signal": "bin_maxbins_10_IMDB_Rating_extent"}
        },
        {
          "type": "aggregate",
          "groupby": ["bin_IMDB_Rating", "bin_IMDB_Rating_end"],
          "ops": ["count"],
          "fields": ["*"],
          "as": ["count_*"]
        },
        {
          "type": "filter",
          "expr": "datum[\"bin_IMDB_Rating\"] !== null && !isNaN(datum[\"bin_IMDB_Rating\"])"
        }
      ]
    }
  ],
  "marks": [
    {
      "name": "marks",
      "type": "rect",
      "style": ["bar"],
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "fill": {"value": "#4c78a8"},
          "x2": {"scale": "x", "field": "bin_IMDB_Rating", "offset": 1},
          "x": {"scale": "x", "field": "bin_IMDB_Rating_end", "offset": 0},
          "y": {"scale": "y", "field": "count_*"},
          "y2": {"scale": "y", "value": 0}
        }
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": {
        "data": "source_0",
        "fields": ["bin_IMDB_Rating", "bin_IMDB_Rating_end"]
      },
      "range": [0, {"signal": "width"}],
      "zero": false
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {"data": "source_0", "field": "count_*"},
      "range": [{"signal": "height"}, 0],
      "nice": true,
      "zero": true
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "title": "IMDB_Rating (binned)",
      "labelFlush": true,
      "labelOverlap": true,
      "tickCount": {"signal": "(domain('x')[1] - domain('x')[0]) / 1 + 1"},
      "values": {"signal": "sequence(domain('x')[0], domain('x')[1] + 1, 1)"},
      "zindex": 1
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": false,
      "title": "Number of Records",
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(height/40)"},
      "zindex": 1
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": true,
      "gridScale": "x",
      "tickCount": {"signal": "ceil(height/40)"},
      "domain": false,
      "labels": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    }
  ],
  "config": {"axisY": {"minExtent": 30}}
}
