{
    "$schema": "https://vega.github.io/schema/vega/v3.0.json",
    "description": "A scatterplot showing horsepower and miles per gallons for various cars.",
    "autosize": "pad",
    "padding": 5,
    "width": 200,
    "height": 200,
    "style": "cell",
    "data": [
        {
            "name": "source_0",
            "url": "data/cars.json",
            "format": {
                "type": "json"
            }
        },
        {
            "name": "data_0",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"Horsepower\"])",
                    "as": "Horsepower"
                },
                {
                    "type": "formula",
                    "expr": "toDate(datum[\"Year\"])",
                    "as": "Year"
                },
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"Acceleration\"])",
                    "as": "Acceleration"
                },
                {
                    "type": "extent",
                    "field": "Acceleration",
                    "signal": "layer_0_bin_maxbins_6_Acceleration_extent"
                },
                {
                    "type": "bin",
                    "field": "Acceleration",
                    "as": [
                        "bin_maxbins_6_Acceleration",
                        "bin_maxbins_6_Acceleration_end"
                    ],
                    "signal": "layer_0_bin_maxbins_6_Acceleration_bins",
                    "maxbins": 6,
                    "extent": {
                        "signal": "layer_0_bin_maxbins_6_Acceleration_extent"
                    }
                },
                {
                    "type": "aggregate",
                    "groupby": [
                        "Year",
                        "bin_maxbins_6_Acceleration",
                        "bin_maxbins_6_Acceleration_end"
                    ],
                    "ops": [
                        "mean"
                    ],
                    "fields": [
                        "Horsepower"
                    ],
                    "as": [
                        "mean_Horsepower"
                    ]
                },
                {
                    "type": "filter",
                    "expr": "datum[\"Year\"] !== null && !isNaN(datum[\"Year\"])"
                }
            ]
        },
        {
            "name": "data_1",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"Horsepower\"])",
                    "as": "Horsepower"
                },
                {
                    "type": "formula",
                    "expr": "toDate(datum[\"Year\"])",
                    "as": "Year"
                },
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"Acceleration\"])",
                    "as": "Acceleration"
                },
                {
                    "type": "extent",
                    "field": "Acceleration",
                    "signal": "layer_1_bin_maxbins_6_Acceleration_extent"
                },
                {
                    "type": "bin",
                    "field": "Acceleration",
                    "as": [
                        "bin_maxbins_6_Acceleration",
                        "bin_maxbins_6_Acceleration_end"
                    ],
                    "signal": "layer_1_bin_maxbins_6_Acceleration_bins",
                    "maxbins": 6,
                    "extent": {
                        "signal": "layer_1_bin_maxbins_6_Acceleration_extent"
                    }
                },
                {
                    "type": "aggregate",
                    "groupby": [
                        "Year",
                        "bin_maxbins_6_Acceleration",
                        "bin_maxbins_6_Acceleration_end"
                    ],
                    "ops": [
                        "mean"
                    ],
                    "fields": [
                        "Horsepower"
                    ],
                    "as": [
                        "mean_Horsepower"
                    ]
                },
                {
                    "type": "filter",
                    "expr": "datum[\"Year\"] !== null && !isNaN(datum[\"Year\"])"
                }
            ]
        }
    ],
    "marks": [
        {
            "name": "layer_0_pathgroup",
            "type": "group",
            "from": {
                "facet": {
                    "name": "faceted_path_layer_0_main",
                    "data": "data_0",
                    "groupby": [
                        "bin_maxbins_6_Acceleration"
                    ]
                }
            },
            "encode": {
                "update": {
                    "width": {
                        "field": {
                            "group": "width"
                        }
                    },
                    "height": {
                        "field": {
                            "group": "height"
                        }
                    }
                }
            },
            "marks": [
                {
                    "name": "layer_0_marks",
                    "type": "line",
                    "style": [
                        "line"
                    ],
                    "sort": {
                        "field": "datum[\"Year\"]",
                        "order": "descending"
                    },
                    "from": {
                        "data": "faceted_path_layer_0_main"
                    },
                    "encode": {
                        "update": {
                            "stroke": {
                                "scale": "color",
                                "field": "bin_maxbins_6_Acceleration"
                            },
                            "x": {
                                "scale": "x",
                                "field": "Year"
                            },
                            "y": {
                                "scale": "y",
                                "field": "mean_Horsepower"
                            }
                        }
                    }
                }
            ]
        },
        {
            "name": "layer_1_marks",
            "type": "symbol",
            "style": [
                "point"
            ],
            "from": {
                "data": "data_1"
            },
            "encode": {
                "update": {
                    "opacity": {
                        "value": 0
                    },
                    "fill": {
                        "scale": "color",
                        "field": "bin_maxbins_6_Acceleration"
                    },
                    "x": {
                        "scale": "x",
                        "field": "Year"
                    },
                    "y": {
                        "scale": "y",
                        "field": "mean_Horsepower"
                    }
                }
            }
        }
    ],
    "scales": [
        {
            "name": "x",
            "type": "time",
            "domain": {
                "fields": [
                    {
                        "data": "data_0",
                        "field": "Year"
                    },
                    {
                        "data": "data_1",
                        "field": "Year"
                    }
                ]
            },
            "range": [
                0,
                {
                    "signal": "width"
                }
            ]
        },
        {
            "name": "y",
            "type": "linear",
            "domain": {
                "fields": [
                    {
                        "data": "data_0",
                        "field": "mean_Horsepower"
                    },
                    {
                        "data": "data_1",
                        "field": "mean_Horsepower"
                    }
                ]
            },
            "range": [
                {
                    "signal": "height"
                },
                0
            ],
            "nice": true,
            "zero": true
        },
        {
            "name": "color",
            "type": "bin-ordinal",
            "domain": {
                "fields": [
                    {
                        "signal": "sequence(layer_0_bin_maxbins_6_Acceleration_bins.start, layer_0_bin_maxbins_6_Acceleration_bins.stop + layer_0_bin_maxbins_6_Acceleration_bins.step, layer_0_bin_maxbins_6_Acceleration_bins.step)"
                    },
                    {
                        "signal": "sequence(layer_1_bin_maxbins_6_Acceleration_bins.start, layer_1_bin_maxbins_6_Acceleration_bins.stop + layer_1_bin_maxbins_6_Acceleration_bins.step, layer_1_bin_maxbins_6_Acceleration_bins.step)"
                    }
                ]
            },
            "range": "ramp"
        }
    ],
    "axes": [
        {
            "scale": "x",
            "orient": "bottom",
            "title": "Year",
            "labelFlush": true,
            "labelOverlap": true,
            "tickCount": {
                "signal": "ceil(width/40)"
            },
            "encode": {
                "labels": {
                    "update": {
                        "text": {
                            "signal": "timeFormat(datum.value, '%b %d, %Y')"
                        }
                    }
                }
            },
            "zindex": 1
        },
        {
            "scale": "x",
            "orient": "bottom",
            "grid": true,
            "tickCount": {
                "signal": "ceil(width/40)"
            },
            "gridScale": "y",
            "domain": false,
            "labels": false,
            "maxExtent": 0,
            "minExtent": 0,
            "ticks": false,
            "zindex": 0
        },
        {
            "scale": "y",
            "orient": "left",
            "title": "Mean of Horsepower",
            "labelOverlap": true,
            "tickCount": {
                "signal": "ceil(height/40)"
            },
            "zindex": 1
        },
        {
            "scale": "y",
            "orient": "left",
            "grid": true,
            "tickCount": {
                "signal": "ceil(height/40)"
            },
            "gridScale": "x",
            "domain": false,
            "labels": false,
            "maxExtent": 0,
            "minExtent": 0,
            "ticks": false,
            "zindex": 0
        }
    ],
    "legends": [
        {
            "stroke": "color",
            "title": "Acceleration (binned)",
            "fill": "color"
        }
    ],
    "config": {
        "axisY": {
            "minExtent": 30
        }
    }
}
