{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "autosize": "pad",
  "padding": 5,
  "width": 900,
  "height": 560,
  "style": "cell",
  "data": [
    {
      "name": "source_0",
      "url": "data/us-10m.json",
      "format": {"type": "topojson", "feature": "states"}
    },
    {
      "name": "source_1",
      "url": "data/airports.csv",
      "format": {"type": "csv"},
      "transform": [
        {
          "type": "geopoint",
          "projection": "projection",
          "fields": ["longitude", "latitude"],
          "as": ["layer_1_x", "layer_1_y"]
        }
      ]
    }
  ],
  "projections": [
    {
      "name": "projection",
      "type": "albersUsa",
      "scale": 3000,
      "translate": [1200, 700]
    }
  ],
  "marks": [
    {
      "name": "layer_0_marks",
      "type": "shape",
      "clip": true,
      "style": ["geoshape"],
      "from": {"data": "source_0"},
      "encode": {
        "update": {"fill": {"value": "#ccc"}, "stroke": {"value": "#fff"}}
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    },
    {
      "name": "layer_1_marks",
      "type": "symbol",
      "clip": true,
      "style": ["circle"],
      "from": {"data": "source_1"},
      "encode": {
        "update": {
          "opacity": {"value": 0.7},
          "fill": {"value": "#4c78a8"},
          "tooltip": {
            "signal": "{\"longitude\": format(datum[\"longitude\"], \"\"), \"latitude\": format(datum[\"latitude\"], \"\")}"
          },
          "x": {"field": "layer_1_x"},
          "y": {"field": "layer_1_y"},
          "size": {"value": 10},
          "shape": {"value": "circle"}
        }
      }
    }
  ],
  "config": {"style": {"cell": {"stroke": null}}}
}
