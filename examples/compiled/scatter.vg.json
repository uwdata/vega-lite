{
    "$schema": "https://vega.github.io/schema/vega/v3.0.json",
    "description": "A scatterplot showing horsepower and miles per gallons for various cars.",
    "autosize": "pad",
    "padding": 5,
    "style": "cell",
    "data": [
        {
            "name": "source_0",
            "url": "data/cars.json",
            "format": {
                "type": "json",
                "parse": {
                    "Horsepower": "number",
                    "Miles_per_Gallon": "number"
                }
            },
            "transform": [
                {
                    "type": "filter",
                    "expr": "datum[\"Horsepower\"] !== null && !isNaN(datum[\"Horsepower\"]) && datum[\"Miles_per_Gallon\"] !== null && !isNaN(datum[\"Miles_per_Gallon\"])"
                }
            ]
        }
    ],
    "signals": [
        {
            "name": "width",
            "update": "200"
        },
        {
            "name": "height",
            "update": "200"
        }
    ],
    "marks": [
        {
            "name": "marks",
            "type": "symbol",
            "style": [
                "point"
            ],
            "from": {
                "data": "source_0"
            },
            "encode": {
                "update": {
                    "x": {
                        "scale": "x",
                        "field": "Horsepower"
                    },
                    "y": {
                        "scale": "y",
                        "field": "Miles_per_Gallon"
                    },
                    "stroke": {
                        "value": "#4c78a8"
                    },
                    "fill": {
                        "value": "transparent"
                    },
                    "opacity": {
                        "value": 0.7
                    }
                }
            }
        }
    ],
    "scales": [
        {
            "name": "x",
            "type": "linear",
            "domain": {
                "data": "source_0",
                "field": "Horsepower"
            },
            "range": [
                0,
                {
                    "signal": "width"
                }
            ],
            "nice": true,
            "zero": true
        },
        {
            "name": "y",
            "type": "linear",
            "domain": {
                "data": "source_0",
                "field": "Miles_per_Gallon"
            },
            "range": [
                {
                    "signal": "height"
                },
                0
            ],
            "nice": true,
            "zero": true
        }
    ],
    "axes": [
        {
            "scale": "x",
            "labelOverlap": true,
            "orient": "bottom",
            "tickCount": {
                "signal": "ceil(width/40)"
            },
            "title": "Horsepower",
            "zindex": 1
        },
        {
            "scale": "x",
            "domain": false,
            "grid": true,
            "labels": false,
            "maxExtent": 0,
            "minExtent": 0,
            "orient": "bottom",
            "tickCount": {
                "signal": "ceil(width/40)"
            },
            "ticks": false,
            "zindex": 0,
            "gridScale": "y"
        },
        {
            "scale": "y",
            "labelOverlap": true,
            "orient": "left",
            "tickCount": {
                "signal": "ceil(height/40)"
            },
            "title": "Miles_per_Gallon",
            "zindex": 1
        },
        {
            "scale": "y",
            "domain": false,
            "grid": true,
            "labels": false,
            "maxExtent": 0,
            "minExtent": 0,
            "orient": "left",
            "tickCount": {
                "signal": "ceil(height/40)"
            },
            "ticks": false,
            "zindex": 0,
            "gridScale": "x"
        }
    ],
    "config": {
        "axisY": {
            "minExtent": 30
        }
    }
}
