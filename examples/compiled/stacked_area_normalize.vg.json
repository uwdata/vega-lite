{
    "$schema": "https://vega.github.io/schema/vega/v3.0.json",
    "autosize": "pad",
    "padding": 5,
    "style": "cell",
    "data": [
        {
            "name": "source_0",
            "url": "data/unemployment-across-industries.json",
            "format": {
                "type": "json",
                "parse": {
                    "date": "date",
                    "count": "number"
                }
            },
            "transform": [
                {
                    "type": "filter",
                    "expr": "datum[\"date\"] !== null && !isNaN(datum[\"date\"])"
                },
                {
                    "type": "formula",
                    "as": "yearmonth_date",
                    "expr": "datetime(year(datum[\"date\"]), month(datum[\"date\"]), 1, 0, 0, 0, 0)"
                },
                {
                    "type": "aggregate",
                    "groupby": [
                        "yearmonth_date",
                        "series"
                    ],
                    "ops": [
                        "sum"
                    ],
                    "fields": [
                        "count"
                    ],
                    "as": [
                        "sum_count"
                    ]
                },
                {
                    "type": "impute",
                    "field": "sum_count",
                    "groupby": [
                        "series"
                    ],
                    "key": "yearmonth_date",
                    "method": "value",
                    "value": 0
                },
                {
                    "type": "stack",
                    "groupby": [
                        "yearmonth_date"
                    ],
                    "field": "sum_count",
                    "sort": {
                        "field": [
                            "series"
                        ],
                        "order": [
                            "descending"
                        ]
                    },
                    "as": [
                        "sum_count_start",
                        "sum_count_end"
                    ],
                    "offset": "normalize"
                }
            ]
        }
    ],
    "signals": [
        {
            "name": "width",
            "update": "300"
        },
        {
            "name": "height",
            "update": "200"
        }
    ],
    "marks": [
        {
            "name": "pathgroup",
            "type": "group",
            "from": {
                "facet": {
                    "name": "faceted_path_main",
                    "data": "source_0",
                    "groupby": [
                        "series"
                    ]
                }
            },
            "encode": {
                "update": {
                    "width": {
                        "field": {
                            "group": "width"
                        }
                    },
                    "height": {
                        "field": {
                            "group": "height"
                        }
                    }
                }
            },
            "marks": [
                {
                    "name": "marks",
                    "type": "area",
                    "style": [
                        "area"
                    ],
                    "sort": {
                        "field": "datum[\"yearmonth_date\"]",
                        "order": "descending"
                    },
                    "from": {
                        "data": "faceted_path_main"
                    },
                    "encode": {
                        "update": {
                            "x": {
                                "scale": "x",
                                "field": "yearmonth_date"
                            },
                            "y": {
                                "scale": "y",
                                "field": "sum_count_end"
                            },
                            "y2": {
                                "scale": "y",
                                "field": "sum_count_start"
                            },
                            "fill": {
                                "scale": "color",
                                "field": "series"
                            },
                            "orient": {
                                "value": "vertical"
                            }
                        }
                    }
                }
            ]
        }
    ],
    "scales": [
        {
            "name": "x",
            "type": "time",
            "domain": {
                "data": "source_0",
                "field": "yearmonth_date"
            },
            "range": [
                0,
                {
                    "signal": "width"
                }
            ],
            "nice": "month"
        },
        {
            "name": "y",
            "type": "linear",
            "domain": [
                0,
                1
            ],
            "range": [
                {
                    "signal": "height"
                },
                0
            ],
            "nice": true,
            "zero": true
        },
        {
            "name": "color",
            "type": "ordinal",
            "domain": {
                "data": "source_0",
                "field": "series",
                "sort": true
            },
            "range": {
                "scheme": "category20b"
            }
        }
    ],
    "axes": [
        {
            "domain": false,
            "scale": "x",
            "labelOverlap": true,
            "orient": "bottom",
            "tickCount": {
                "signal": "ceil(width/40)"
            },
            "title": "YEARMONTH(date)",
            "zindex": 1,
            "encode": {
                "labels": {
                    "update": {
                        "text": {
                            "signal": "timeFormat(datum.value, '%Y')"
                        }
                    }
                }
            }
        },
        {
            "domain": false,
            "scale": "x",
            "grid": true,
            "labels": false,
            "maxExtent": 0,
            "minExtent": 0,
            "orient": "bottom",
            "tickCount": {
                "signal": "ceil(width/40)"
            },
            "ticks": false,
            "zindex": 0,
            "gridScale": "y"
        }
    ],
    "legends": [
        {
            "fill": "color",
            "title": "series"
        }
    ],
    "config": {
        "axisY": {
            "minExtent": 30
        }
    }
}
