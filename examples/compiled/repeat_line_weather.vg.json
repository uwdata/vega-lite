{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "autosize": "pad",
  "padding": 5,
  "width": 200,
  "height": 200,
  "data": [
    {
      "name": "source_0",
      "url": "data/weather.csv",
      "format": {"type": "csv", "parse": {"date": "date"}},
      "transform": [
        {
          "type": "formula",
          "as": "month_date",
          "expr": "datetime(0, month(datum[\"date\"]), 1, 0, 0, 0, 0)"
        },
        {
          "type": "aggregate",
          "groupby": ["month_date", "location"],
          "ops": ["mean", "mean", "mean"],
          "fields": ["wind", "temp_max", "precipitation"],
          "as": ["mean_wind", "mean_temp_max", "mean_precipitation"]
        }
      ]
    }
  ],
  "layout": {
    "padding": {"row": 10, "column": 10},
    "columns": 3,
    "bounds": "full",
    "align": "all"
  },
  "marks": [
    {
      "type": "group",
      "name": "child__repeat_column_temp_max_group",
      "style": "cell",
      "encode": {
        "update": {"width": {"signal": "width"}, "height": {"signal": "height"}}
      },
      "marks": [
        {
          "name": "child__repeat_column_temp_max_pathgroup",
          "type": "group",
          "from": {
            "facet": {
              "name": "faceted_path_child__repeat_column_temp_max_main",
              "data": "source_0",
              "groupby": ["location"]
            }
          },
          "encode": {
            "update": {
              "width": {"field": {"group": "width"}},
              "height": {"field": {"group": "height"}}
            }
          },
          "marks": [
            {
              "name": "child__repeat_column_temp_max_marks",
              "type": "line",
              "style": ["line"],
              "sort": {"field": "datum[\"month_date\"]", "order": "descending"},
              "from": {
                "data": "faceted_path_child__repeat_column_temp_max_main"
              },
              "encode": {
                "update": {
                  "stroke": {"scale": "color", "field": "location"},
                  "tooltip": {
                    "signal": "{\"date (month)\": timeFormat(datum[\"month_date\"], '%b'), \"Mean of temp_max\": format(datum[\"mean_temp_max\"], \"\"), \"location\": ''+datum[\"location\"]}"
                  },
                  "x": {
                    "scale": "child__repeat_column_temp_max_x",
                    "field": "month_date"
                  },
                  "y": {
                    "scale": "child__repeat_column_temp_max_y",
                    "field": "mean_temp_max"
                  },
                  "defined": {
                    "signal": "datum[\"month_date\"] !== null && !isNaN(datum[\"month_date\"]) && datum[\"mean_temp_max\"] !== null && !isNaN(datum[\"mean_temp_max\"])"
                  }
                }
              }
            }
          ]
        }
      ],
      "axes": [
        {
          "scale": "child__repeat_column_temp_max_x",
          "orient": "bottom",
          "grid": false,
          "title": "date (month)",
          "labelFlush": true,
          "labelOverlap": true,
          "encode": {
            "labels": {
              "update": {"text": {"signal": "timeFormat(datum.value, '%b')"}}
            }
          },
          "zindex": 1
        },
        {
          "scale": "child__repeat_column_temp_max_x",
          "orient": "bottom",
          "gridScale": "child__repeat_column_temp_max_y",
          "grid": true,
          "domain": false,
          "labels": false,
          "maxExtent": 0,
          "minExtent": 0,
          "ticks": false,
          "zindex": 0
        },
        {
          "scale": "child__repeat_column_temp_max_y",
          "orient": "left",
          "grid": false,
          "title": "Mean of temp_max",
          "labelOverlap": true,
          "tickCount": {"signal": "ceil(height/40)"},
          "zindex": 1
        },
        {
          "scale": "child__repeat_column_temp_max_y",
          "orient": "left",
          "gridScale": "child__repeat_column_temp_max_x",
          "grid": true,
          "tickCount": {"signal": "ceil(height/40)"},
          "domain": false,
          "labels": false,
          "maxExtent": 0,
