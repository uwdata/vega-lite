{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "Cars from Japan compared to all cars. Demonstrates independent legends in layers.",
  "autosize": "pad",
  "padding": 5,
  "width": 200,
  "height": 200,
  "style": "cell",
  "data": [
    {"name": "source_0", "url": "data/cars.json", "format": {"type": "json"}},
    {
      "name": "data_0",
      "source": "source_0",
      "transform": [
        {
          "type": "extent",
          "field": "Acceleration",
          "signal": "layer_0_bin_maxbins_10_Acceleration_extent"
        },
        {
          "type": "bin",
          "field": "Acceleration",
          "as": [
            "bin_maxbins_10_Acceleration",
            "bin_maxbins_10_Acceleration_end"
          ],
          "signal": "layer_0_bin_maxbins_10_Acceleration_bins",
          "maxbins": 10,
          "extent": {"signal": "layer_0_bin_maxbins_10_Acceleration_extent"}
        },
        {
          "type": "extent",
          "field": "Horsepower",
          "signal": "layer_0_bin_maxbins_10_Horsepower_extent"
        },
        {
          "type": "bin",
          "field": "Horsepower",
          "as": ["bin_maxbins_10_Horsepower", "bin_maxbins_10_Horsepower_end"],
          "signal": "layer_0_bin_maxbins_10_Horsepower_bins",
          "maxbins": 10,
          "extent": {"signal": "layer_0_bin_maxbins_10_Horsepower_extent"}
        },
        {
          "type": "aggregate",
          "groupby": [
            "bin_maxbins_10_Acceleration",
            "bin_maxbins_10_Acceleration_end",
            "bin_maxbins_10_Horsepower",
            "bin_maxbins_10_Horsepower_end"
          ],
          "ops": ["count"],
          "fields": [null],
          "as": ["__count"]
        }
      ]
    },
    {
      "name": "data_1",
      "source": "source_0",
      "transform": [
        {
          "type": "extent",
          "field": "Acceleration",
          "signal": "layer_1_bin_maxbins_10_Acceleration_extent"
        },
        {
          "type": "bin",
          "field": "Acceleration",
          "as": [
            "bin_maxbins_10_Acceleration",
            "bin_maxbins_10_Acceleration_end"
          ],
          "signal": "layer_1_bin_maxbins_10_Acceleration_bins",
          "maxbins": 10,
          "extent": {"signal": "layer_1_bin_maxbins_10_Acceleration_extent"}
        },
        {
          "type": "extent",
          "field": "Horsepower",
          "signal": "layer_1_bin_maxbins_10_Horsepower_extent"
        },
        {
          "type": "bin",
          "field": "Horsepower",
          "as": ["bin_maxbins_10_Horsepower", "bin_maxbins_10_Horsepower_end"],
          "signal": "layer_1_bin_maxbins_10_Horsepower_bins",
          "maxbins": 10,
          "extent": {"signal": "layer_1_bin_maxbins_10_Horsepower_extent"}
        },
        {"type": "filter", "expr": "datum.Origin === 'Japan'"},
        {
          "type": "aggregate",
          "groupby": [
            "bin_maxbins_10_Acceleration",
            "bin_maxbins_10_Acceleration_end",
            "bin_maxbins_10_Horsepower",
            "bin_maxbins_10_Horsepower_end"
          ],
          "ops": ["count"],
          "fields": [null],
          "as": ["__count"]
        }
      ]
    }
  ],
  "marks": [
    {
      "name": "layer_0_marks",
      "type": "symbol",
      "style": ["circle"],
      "from": {"data": "data_0"},
      "encode": {
        "update": {
          "fill": [
            {
              "test": "datum[\"bin_maxbins_10_Acceleration\"] === null || isNaN(datum[\"bin_maxbins_10_Acceleration\"]) || datum[\"bin_maxbins_10_Horsepower\"] === null || isNaN(datum[\"bin_maxbins_10_Horsepower\"]) || datum[\"__count\"] === null || isNaN(datum[\"__count\"])",
              "value": null
            },
            {"value": "#4c78a8"}
          ],
          "tooltip": {
            "signal": "{\"Acceleration (binned)\": datum[\"bin_maxbins_10_Acceleration\"] === null || isNaN(datum[\"bin_maxbins_10_Acceleration\"]) ? \"null\" : format(datum[\"bin_maxbins_10_Acceleration\"], \"\") + \" - \" + format(datum[\"bin_maxbins_10_Acceleration_end\"], \"\"), \"Horsepower (binned)\": datum[\"bin_maxbins_10_Horsepower\"] === null || isNaN(datum[\"bin_maxbins_10_Horsepower\"]) ? \"null\" : format(datum[\"bin_maxbins_10_Horsepower\"], \"\") + \" - \" + format(datum[\"bin_maxbins_10_Horsepower_end\"], \"\"), \"All Cars\": format(datum[\"__count\"], \"\")}"
          },
          "x": {
            "signal": "scale(\"x\", (datum[\"bin_maxbins_10_Acceleration\"] + datum[\"bin_maxbins_10_Acceleration_end\"]) / 2)"
          },
          "y": {
            "signal": "scale(\"y\", (datum[\"bin_maxbins_10_Horsepower\"] + datum[\"bin_maxbins_10_Horsepower_end\"]) / 2)"
          },
          "size": {"scale": "size", "field": "__count"},
          "shape": {"value": "circle"}
        }
      }
    },
    {
      "name": "layer_1_marks",
      "type": "symbol",
      "style": ["circle"],
      "from": {"data": "data_1"},
      "encode": {
        "update": {
          "fill": [
            {
              "test": "datum[\"bin_maxbins_10_Acceleration\"] === null || isNaN(datum[\"bin_maxbins_10_Acceleration\"]) || datum[\"bin_maxbins_10_Horsepower\"] === null || isNaN(datum[\"bin_maxbins_10_Horsepower\"]) || datum[\"__count\"] === null || isNaN(datum[\"__count\"])",
              "value": null
            },
            {"value": "firebrick"}
          ],
          "tooltip": {
            "signal": "{\"Acceleration (binned)\": datum[\"bin_maxbins_10_Acceleration\"] === null || isNaN(datum[\"bin_maxbins_10_Acceleration\"]) ? \"null\" : format(datum[\"bin_maxbins_10_Acceleration\"], \"\") + \" - \" + format(datum[\"bin_maxbins_10_Acceleration_end\"], \"\"), \"Horsepower (binned)\": datum[\"bin_maxbins_10_Horsepower\"] === null || isNaN(datum[\"bin_maxbins_10_Horsepower\"]) ? \"null\" : format(datum[\"bin_maxbins_10_Horsepower\"], \"\") + \" - \" + format(datum[\"bin_maxbins_10_Horsepower_end\"], \"\"), \"Cars from Japan\": format(datum[\"__count\"], \"\")}"
          },
          "x": {
            "signal": "scale(\"x\", (datum[\"bin_maxbins_10_Acceleration\"] + datum[\"bin_maxbins_10_Acceleration_end\"]) / 2)"
          },
          "y": {
            "signal": "scale(\"y\", (datum[\"bin_maxbins_10_Horsepower\"] + datum[\"bin_maxbins_10_Horsepower_end\"]) / 2)"
          },
          "size": {"scale": "size", "field": "__count"},
          "shape": {"value": "circle"}
        }
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": {
        "fields": [
          {
            "signal": "[layer_0_bin_maxbins_10_Acceleration_bins.start, layer_0_bin_maxbins_10_Acceleration_bins.stop]"
          },
          {
            "signal": "[layer_1_bin_maxbins_10_Acceleration_bins.start, layer_1_bin_maxbins_10_Acceleration_bins.stop]"
          }
        ]
      },
      "range": [0, {"signal": "width"}],
      "bins": {"signal": "layer_0_bin_maxbins_10_Acceleration_bins"},
      "zero": false
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "fields": [
          {
            "signal": "[layer_0_bin_maxbins_10_Horsepower_bins.start, layer_0_bin_maxbins_10_Horsepower_bins.stop]"
          },
          {
            "signal": "[layer_1_bin_maxbins_10_Horsepower_bins.start, layer_1_bin_maxbins_10_Horsepower_bins.stop]"
          }
        ]
      },
      "range": [{"signal": "height"}, 0],
      "bins": {"signal": "layer_0_bin_maxbins_10_Horsepower_bins"},
      "zero": false
    },
    {
      "name": "size",
      "type": "linear",
      "domain": {
        "fields": [
          {"data": "data_0", "field": "__count"},
          {"data": "data_1", "field": "__count"}
        ]
      },
      "range": [
        0,
        {
          "signal": "pow(0.95 * min(width / ((layer_0_bin_maxbins_10_Acceleration_bins.stop - layer_0_bin_maxbins_10_Acceleration_bins.start) / layer_0_bin_maxbins_10_Acceleration_bins.step), height / ((layer_0_bin_maxbins_10_Horsepower_bins.stop - layer_0_bin_maxbins_10_Horsepower_bins.start) / layer_0_bin_maxbins_10_Horsepower_bins.step)), 2)"
        }
      ],
      "zero": true
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "title": "Acceleration (binned)",
      "labelFlush": true,
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(width/10)"},
      "zindex": 1
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": false,
      "title": "Horsepower (binned)",
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(height/10)"},
      "zindex": 1
    }
  ],
  "legends": [
    {
      "title": "All Cars",
      "size": "size",
      "gradientLength": {"signal": "clamp(height, 64, 200)"},
      "encode": {
        "symbols": {
          "update": {
            "fill": {"value": "#4c78a8"},
            "shape": {"value": "circle"},
            "stroke": {"value": "transparent"}
          }
        }
      }
    },
    {
      "title": "Cars from Japan",
      "size": "size",
      "gradientLength": {"signal": "clamp(height, 64, 200)"},
      "encode": {
        "symbols": {
          "update": {
            "fill": {"value": "firebrick"},
            "shape": {"value": "circle"},
            "stroke": {"value": "transparent"}
          }
        }
      }
    }
  ],
  "config": {"axisY": {"minExtent": 30}}
}
