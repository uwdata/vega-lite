{
    "$schema": "https://vega.github.io/schema/vega/v3.0.json",
    "description": "Area chart showing weight of cars over time (vertical).",
    "autosize": "pad",
    "padding": 5,
    "style": "cell",
    "data": [
        {
            "name": "source_0",
            "url": "data/cars.json",
            "format": {
                "type": "json",
                "parse": {
                    "Weight_in_lbs": "number",
                    "Year": "date"
                }
            },
            "transform": [
                {
                    "type": "filter",
                    "expr": "datum[\"Year\"] !== null && !isNaN(datum[\"Year\"])"
                },
                {
                    "type": "formula",
                    "as": "year_Year",
                    "expr": "datetime(year(datum[\"Year\"]), 0, 1, 0, 0, 0, 0)"
                },
                {
                    "type": "aggregate",
                    "groupby": [
                        "year_Year"
                    ],
                    "ops": [
                        "sum"
                    ],
                    "fields": [
                        "Weight_in_lbs"
                    ],
                    "as": [
                        "sum_Weight_in_lbs"
                    ]
                }
            ]
        }
    ],
    "signals": [
        {
            "name": "width",
            "update": "200"
        },
        {
            "name": "height",
            "update": "200"
        }
    ],
    "marks": [
        {
            "name": "marks",
            "type": "area",
            "style": [
                "area"
            ],
            "sort": {
                "field": "datum[\"year_Year\"]",
                "order": "descending"
            },
            "from": {
                "data": "source_0"
            },
            "encode": {
                "update": {
                    "x": {
                        "scale": "x",
                        "field": "sum_Weight_in_lbs"
                    },
                    "y": {
                        "scale": "y",
                        "field": "year_Year"
                    },
                    "x2": {
                        "scale": "x",
                        "value": 0
                    },
                    "fill": {
                        "value": "#4c78a8"
                    },
                    "orient": {
                        "value": "horizontal"
                    },
                    "interpolate": {
                        "value": "monotone"
                    }
                }
            }
        }
    ],
    "scales": [
        {
            "name": "x",
            "type": "linear",
            "domain": {
                "data": "source_0",
                "field": "sum_Weight_in_lbs"
            },
            "range": [
                0,
                {
                    "signal": "width"
                }
            ],
            "nice": true,
            "zero": true
        },
        {
            "name": "y",
            "type": "time",
            "domain": {
                "data": "source_0",
                "field": "year_Year"
            },
            "range": [
                {
                    "signal": "height"
                },
                0
            ],
            "nice": "year"
        }
    ],
    "axes": [
        {
            "scale": "x",
            "labelOverlap": true,
            "orient": "bottom",
            "tickCount": {
                "signal": "ceil(width/40)"
            },
            "title": "SUM(Weight_in_lbs)",
            "zindex": 1
        },
        {
            "scale": "x",
            "domain": false,
            "grid": true,
            "labels": false,
            "maxExtent": 0,
            "minExtent": 0,
            "orient": "bottom",
            "tickCount": {
                "signal": "ceil(width/40)"
            },
            "ticks": false,
            "zindex": 0,
            "gridScale": "y"
        },
        {
            "scale": "y",
            "labelOverlap": true,
            "orient": "left",
            "tickCount": {
                "signal": "ceil(height/40)"
            },
            "title": "YEAR(Year)",
            "zindex": 1,
            "encode": {
                "labels": {
                    "update": {
                        "text": {
                            "signal": "timeFormat(datum.value, '%Y')"
                        }
                    }
                }
            }
        },
        {
            "scale": "y",
            "domain": false,
            "grid": true,
            "labels": false,
            "maxExtent": 0,
            "minExtent": 0,
            "orient": "left",
            "tickCount": {
                "signal": "ceil(height/40)"
            },
            "ticks": false,
            "zindex": 0,
            "gridScale": "x"
        }
    ],
    "config": {
        "axisY": {
            "minExtent": 30
        }
    }
}
