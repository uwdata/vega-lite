{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "the population per state, engineers per state, and hurricanes per state",
  "autosize": "pad",
  "padding": 5,
  "width": 500,
  "height": 300,
  "data": [
    {
      "name": "source_0",
      "url": "data/population_engineers_hurricanes.csv",
      "format": {"type": "csv"}
    },
    {
      "name": "source_1",
      "url": "data/us-10m.json",
      "format": {"type": "topojson", "feature": "states"}
    },
    {
      "name": "data_0",
      "source": "source_0",
      "transform": [
        {
          "type": "lookup",
          "from": "source_1",
          "key": "id",
          "fields": ["id"],
          "as": ["geo"]
        },
        {
          "type": "geojson",
          "geojson": "geo",
          "signal": "child__repeat_row_population_geojson_0"
        },
        {
          "type": "filter",
          "expr": "datum[\"population\"] !== null && !isNaN(datum[\"population\"])"
        }
      ]
    },
    {
      "name": "data_1",
      "source": "source_0",
      "transform": [
        {
          "type": "lookup",
          "from": "source_1",
          "key": "id",
          "fields": ["id"],
          "as": ["geo"]
        },
        {
          "type": "geojson",
          "geojson": "geo",
          "signal": "child__repeat_row_engineers_geojson_0"
        },
        {
          "type": "filter",
          "expr": "datum[\"engineers\"] !== null && !isNaN(datum[\"engineers\"])"
        }
      ]
    },
    {
      "name": "data_2",
      "source": "source_0",
      "transform": [
        {
          "type": "lookup",
          "from": "source_1",
          "key": "id",
          "fields": ["id"],
          "as": ["geo"]
        },
        {
          "type": "geojson",
          "geojson": "geo",
          "signal": "child__repeat_row_hurricanes_geojson_0"
        },
        {
          "type": "filter",
          "expr": "datum[\"hurricanes\"] !== null && !isNaN(datum[\"hurricanes\"])"
        }
      ]
    }
  ],
  "projections": [
    {
      "name": "projection",
      "size": {"signal": "[width, height]"},
      "fit": {
        "signal": "[child__repeat_row_population_geojson_0, child__repeat_row_engineers_geojson_0, child__repeat_row_hurricanes_geojson_0]"
      },
      "type": "albersUsa"
    }
  ],
  "layout": {"padding": 20, "columns": 1, "bounds": "full", "align": "all"},
  "marks": [
    {
      "type": "group",
      "name": "child__repeat_row_population_group",
      "style": "cell",
      "encode": {
        "update": {"width": {"signal": "width"}, "height": {"signal": "height"}}
      },
      "marks": [
        {
          "name": "child__repeat_row_population_marks",
          "type": "shape",
          "style": ["geoshape"],
          "from": {"data": "data_0"},
          "encode": {
            "update": {
              "fill": {
                "scale": "child__repeat_row_population_color",
                "field": "population"
              }
            }
          },
          "transform": [
            {
              "type": "geoshape",
              "projection": "projection",
              "field": "datum[\"geo\"]"
            }
          ]
        }
      ],
      "legends": [
        {
          "fill": "child__repeat_row_population_color",
          "gradientLength": {"signal": "clamp(height, 64, 200)"},
          "symbolType": "circle",
          "title": "population"
        }
      ]
    },
    {
      "type": "group",
      "name": "child__repeat_row_engineers_group",
      "style": "cell",
      "encode": {
        "update": {"width": {"signal": "width"}, "height": {"signal": "height"}}
      },
      "marks": [
        {
          "name": "child__repeat_row_engineers_marks",
          "type": "shape",
          "style": ["geoshape"],
          "from": {"data": "data_1"},
          "encode": {
            "update": {
              "fill": {
                "scale": "child__repeat_row_engineers_color",
                "field": "engineers"
              }
            }
          },
          "transform": [
            {
              "type": "geoshape",
              "projection": "projection",
              "field": "datum[\"geo\"]"
            }
          ]
        }
      ],
      "legends": [
        {
          "fill": "child__repeat_row_engineers_color",
          "gradientLength": {"signal": "clamp(height, 64, 200)"},
          "symbolType": "circle",
          "title": "engineers"
        }
      ]
    },
    {
      "type": "group",
      "name": "child__repeat_row_hurricanes_group",
      "style": "cell",
      "encode": {
        "update": {"width": {"signal": "width"}, "height": {"signal": "height"}}
      },
      "marks": [
        {
          "name": "child__repeat_row_hurricanes_marks",
          "type": "shape",
          "style": ["geoshape"],
          "from": {"data": "data_2"},
          "encode": {
            "update": {
              "fill": {
                "scale": "child__repeat_row_hurricanes_color",
                "field": "hurricanes"
              }
            }
          },
          "transform": [
            {
              "type": "geoshape",
              "projection": "projection",
              "field": "datum[\"geo\"]"
            }
          ]
        }
      ],
      "legends": [
        {
          "fill": "child__repeat_row_hurricanes_color",
          "gradientLength": {"signal": "clamp(height, 64, 200)"},
          "symbolType": "circle",
          "title": "hurricanes"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "child__repeat_row_population_color",
      "type": "linear",
      "domain": {"data": "data_0", "field": "population"},
      "range": "heatmap",
      "interpolate": "hcl",
      "zero": false
    },
    {
      "name": "child__repeat_row_engineers_color",
      "type": "linear",
      "domain": {"data": "data_1", "field": "engineers"},
      "range": "heatmap",
      "interpolate": "hcl",
      "zero": false
    },
    {
      "name": "child__repeat_row_hurricanes_color",
      "type": "linear",
      "domain": {"data": "data_2", "field": "hurricanes"},
      "range": "heatmap",
      "interpolate": "hcl",
      "zero": false
    }
  ]
}
