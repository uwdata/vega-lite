{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "autosize": "pad",
  "padding": 5,
  "width": 200,
  "data": [
    {
      "name": "source_0",
      "values": [
        {
          "measure": "Open Exploration",
          "mean": 1.813,
          "lo": 1.255,
          "hi": 2.37,
          "study": "PoleStar vs Voyager"
        },
        {
          "measure": "Focused Question Answering",
          "mean": -1.688,
          "lo": -2.325,
          "hi": -1.05,
          "study": "PoleStar vs Voyager"
        },
        {
          "measure": "Open Exploration",
          "mean": 2.1875,
          "lo": 1.665,
          "hi": 2.71,
          "study": "PoleStar vs Voyager 2"
        },
        {
          "measure": "Focused Question Answering",
          "mean": -0.0625,
          "lo": -0.474,
          "hi": 0.349,
          "study": "PoleStar vs Voyager 2"
        }
      ]
    },
    {
      "name": "source_1",
      "values": [
        {"from": -0.25, "to": -2.9, "label": "PoleStar"},
        {"from": 0.25, "to": 2.9, "label": "Voyager / Voyager 2"}
      ]
    },
    {
      "name": "data_2",
      "source": "source_1",
      "transform": [{"type": "filter", "expr": "datum.label === 'PoleStar'"}]
    },
    {
      "name": "data_3",
      "source": "source_1",
      "transform": [{"type": "filter", "expr": "datum.label !== 'PoleStar'"}]
    }
  ],
  "signals": [
    {"name": "concat_0_y_step", "value": 20},
    {
      "name": "concat_0_height",
      "update": "bandspace(domain('concat_0_y').length, 0, 0) * concat_0_y_step"
    },
    {"name": "concat_1_height", "value": 20}
  ],
  "layout": {
    "padding": {"row": 10, "column": 10},
    "columns": 1,
    "bounds": "full",
    "align": "each"
  },
  "marks": [
    {
      "type": "group",
      "name": "concat_0_group",
      "title": {"text": "Mean of Subject Ratings (95% CIs)", "frame": "bounds"},
      "style": "cell",
      "encode": {
        "update": {
          "width": {"signal": "width"},
          "height": {"signal": "concat_0_height"}
        }
      },
      "marks": [
        {
          "name": "concat_0_layer_0_marks",
          "type": "rule",
          "style": ["rule"],
          "from": {"data": "source_0"},
          "encode": {
            "update": {
              "stroke": [
                {
                  "test": "datum[\"lo\"] === null || isNaN(datum[\"lo\"])",
                  "value": null
                },
                {"value": "black"}
              ],
              "tooltip": {
                "signal": "{\"study\": ''+datum[\"study\"], \"lo\": format(datum[\"lo\"], \"\"), \"hi\": format(datum[\"hi\"], \"\")}"
              },
              "x": {"scale": "concat_0_x", "field": "lo"},
              "y": {"scale": "concat_0_y", "field": "study", "band": 0.5},
              "x2": {"scale": "concat_0_x", "field": "hi"}
            }
          }
        },
        {
          "name": "concat_0_layer_1_marks",
          "type": "symbol",
          "style": ["circle"],
          "from": {"data": "source_0"},
          "encode": {
            "update": {
              "opacity": {"value": 1},
              "stroke": [
                {
                  "test": "datum[\"mean\"] === null || isNaN(datum[\"mean\"])",
                  "value": null
                },
                {"value": "black"}
              ],
              "fill": [
                {
                  "test": "datum[\"mean\"] === null || isNaN(datum[\"mean\"])",
                  "value": null
                },
                {"scale": "color", "field": "measure"}
              ],
              "tooltip": {
                "signal": "{\"study\": ''+datum[\"study\"], \"mean\": format(datum[\"mean\"], \"\"), \"measure\": ''+datum[\"measure\"]}"
              },
              "x": {"scale": "concat_0_x", "field": "mean"},
              "y": {"scale": "concat_0_y", "field": "study", "band": 0.5},
              "shape": {"value": "circle"}
            }
          }
        }
      ],
      "axes": [
        {
          "scale": "concat_0_x",
          "orient": "bottom",
          "grid": false,
          "encode": {
            "grid": {
              "update": {
                "strokeDash": {"value": [3, 3]},
                "stroke": [
                  {"test": "datum.value === 0", "value": "#666"},
                  {"value": "#CCC"}
                ]
              }
            }
          },
          "labelFlush": true,
          "labelOverlap": true,
          "tickCount": {"signal": "ceil(width/40)"},
          "zindex": 1
        },
        {
          "scale": "concat_0_x",
          "orient": "bottom",
          "encode": {
            "grid": {
              "update": {
                "strokeDash": {"value": [3, 3]},
                "stroke": [
                  {"test": "datum.value === 0", "value": "#666"},
                  {"value": "#CCC"}
                ]
              }
            }
          },
          "gridScale": "concat_0_y",
          "grid": true,
          "tickCount": {"signal": "ceil(width/40)"},
          "domain": false,
          "labels": false,
          "maxExtent": 0,
          "minExtent": 0,
          "ticks": false,
          "zindex": 0
        },
        {
          "scale": "concat_0_y",
          "orient": "left",
          "grid": false,
          "domain": false,
          "labelPadding": 5,
          "ticks": false,
          "zindex": 1
        }
      ]
    },
    {
      "type": "group",
      "name": "concat_1_group",
      "style": "cell",
      "encode": {
        "update": {
          "width": {"signal": "width"},
          "height": {"signal": "concat_1_height"}
        }
      },
      "marks": [
        {
          "name": "concat_1_layer_0_marks",
          "type": "rule",
          "style": ["rule"],
          "from": {"data": "source_1"},
          "encode": {
            "update": {
              "stroke": [
                {
                  "test": "datum[\"from\"] === null || isNaN(datum[\"from\"])",
                  "value": null
                },
                {"value": "black"}
              ],
              "tooltip": {
                "signal": "{\"from\": format(datum[\"from\"], \"\"), \"to\": format(datum[\"to\"], \"\")}"
              },
              "x": {"scale": "concat_1_x", "field": "from"},
              "y": {"signal": "concat_1_height", "mult": 0.5},
              "x2": {"scale": "concat_1_x", "field": "to"}
            }
          }
        },
        {
          "name": "concat_1_layer_1_marks",
          "type": "symbol",
          "style": ["point"],
          "from": {"data": "source_1"},
          "encode": {
            "update": {
              "opacity": {"value": 0.7},
              "fill": [
                {
                  "test": "datum[\"to\"] === null || isNaN(datum[\"to\"])",
                  "value": null
                },
                {"value": "black"}
              ],
              "size": {"value": 60},
              "tooltip": {"signal": "{\"to\": format(datum[\"to\"], \"\")}"},
              "x": {"scale": "concat_1_x", "field": "to"},
              "y": {"signal": "concat_1_height", "mult": 0.5},
              "shape": [
                {"test": "datum.to > 0", "value": "triangle-right"},
                {"value": "triangle-left"}
              ]
            }
          }
        },
        {
          "name": "concat_1_layer_2_marks",
          "type": "text",
          "style": ["text", "arrow-label"],
          "from": {"data": "data_2"},
          "encode": {
            "update": {
              "align": {"value": "right"},
              "fill": [
                {
                  "test": "datum[\"from\"] === null || isNaN(datum[\"from\"])",
                  "value": null
                },
                {"value": "black"}
              ],
              "tooltip": {
                "signal": "{\"from\": format(datum[\"from\"], \"\"), \"label\": ''+datum[\"label\"]}"
              },
              "x": {"scale": "concat_1_x", "field": "from"},
              "y": {"signal": "concat_1_height", "mult": 0.5},
              "text": {"signal": "''+datum[\"label\"]"},
              "fontSize": {"value": 9.5}
            }
          }
        },
        {
          "name": "concat_1_layer_3_marks",
          "type": "text",
          "style": ["text", "arrow-label"],
          "from": {"data": "data_3"},
          "encode": {
            "update": {
              "align": {"value": "left"},
              "fill": [
                {
                  "test": "datum[\"from\"] === null || isNaN(datum[\"from\"])",
                  "value": null
                },
                {"value": "black"}
              ],
              "tooltip": {
                "signal": "{\"from\": format(datum[\"from\"], \"\"), \"label\": ''+datum[\"label\"]}"
              },
              "x": {"scale": "concat_1_x", "field": "from"},
              "y": {"signal": "concat_1_height", "mult": 0.5},
              "text": {"signal": "''+datum[\"label\"]"},
              "fontSize": {"value": 9.5}
            }
          }
        },
        {
          "name": "concat_1_layer_4_marks",
          "type": "text",
          "style": ["text", "arrow-label2"],
          "from": {"data": "data_2"},
          "encode": {
            "update": {
              "align": {"value": "right"},
              "fill": [
                {
                  "test": "datum[\"from\"] === null || isNaN(datum[\"from\"])",
                  "value": null
                },
                {"value": "black"}
              ],
              "tooltip": {
                "signal": "{\"from\": format(datum[\"from\"], \"\")}"
              },
              "x": {"scale": "concat_1_x", "field": "from"},
              "y": {"signal": "concat_1_height", "mult": 0.5},
              "text": {"value": "more valuable"},
              "fontSize": {"value": 9.5}
            }
          }
        },
        {
          "name": "concat_1_layer_5_marks",
          "type": "text",
          "style": ["text", "arrow-label2"],
          "from": {"data": "data_3"},
          "encode": {
            "update": {
              "align": {"value": "left"},
              "fill": [
                {
                  "test": "datum[\"from\"] === null || isNaN(datum[\"from\"])",
                  "value": null
                },
                {"value": "black"}
              ],
              "tooltip": {
                "signal": "{\"from\": format(datum[\"from\"], \"\")}"
              },
              "x": {"scale": "concat_1_x", "field": "from"},
              "y": {"signal": "concat_1_height", "mult": 0.5},
              "text": {"value": "more valuable"},
              "fontSize": {"value": 9.5}
            }
          }
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "source_0", "field": "measure", "sort": true},
      "range": ["black", "white"],
      "interpolate": "hcl"
    },
    {
      "name": "concat_0_x",
      "type": "linear",
      "domain": {"fields": [[-3, 3], {"data": "source_0", "field": "mean"}]},
      "range": [0, {"signal": "width"}],
      "nice": true,
      "zero": false
    },
    {
      "name": "concat_0_y",
      "type": "band",
      "domain": {"data": "source_0", "field": "study", "sort": true},
      "range": {"step": {"signal": "concat_0_y_step"}},
      "paddingInner": 0,
      "paddingOuter": 0
    },
    {
      "name": "concat_1_x",
      "type": "linear",
      "domain": {
        "fields": [
          {"data": "source_1", "field": "from"},
          {"data": "source_1", "field": "to"},
          {"data": "data_2", "field": "from"},
          {"data": "data_3", "field": "from"}
        ]
      },
      "range": [0, {"signal": "width"}],
      "zero": false,
      "nice": true
    }
  ],
  "config": {
    "axisY": {"minExtent": 30},
    "style": {
      "arrow-label": {"dy": 16, "fontSize": 9.5},
      "arrow-label2": {"dy": 28, "fontSize": 9.5},
      "cell": {"stroke": "transparent"},
      "group-title": {"fontSize": 12}
    }
  }
}
