{
    "$schema": "https://vega.github.io/schema/vega/v3.0.json",
    "description": "Bar graph showing how each of the 'really good' movies is different from the average movie rating. Really good is defined to differ from the average movie rating by more than 2.5 points.",
    "autosize": "pad",
    "padding": 5,
    "width": 300,
    "height": 50,
    "style": "cell",
    "data": [
        {
            "name": "source_0",
            "url": "data/movies.json",
            "format": {
                "type": "json",
                "parse": {
                    "IMDB_Rating": "number"
                }
            },
            "transform": [
                {
                    "type": "window",
                    "params": [
                        null
                    ],
                    "as": [
                        "AverageRating"
                    ],
                    "ops": [
                        "mean"
                    ],
                    "fields": [
                        "IMDB_Rating"
                    ],
                    "sort": {
                        "field": [],
                        "order": []
                    },
                    "frame": [
                        null,
                        null
                    ]
                },
                {
                    "type": "filter",
                    "expr": "(datum.IMDB_Rating - datum.AverageRating) > 2.5"
                },
                {
                    "type": "filter",
                    "expr": "datum[\"IMDB_Rating\"] !== null && !isNaN(datum[\"IMDB_Rating\"])"
                }
            ]
        }
    ],
    "marks": [
        {
            "name": "marks",
            "type": "rect",
            "clip": true,
            "style": [
                "bar"
            ],
            "from": {
                "data": "source_0"
            },
            "encode": {
                "update": {
                    "fill": {
                        "value": "#4c78a8"
                    },
                    "x": {
                        "scale": "x",
                        "field": "IMDB_Rating"
                    },
                    "x2": {
                        "value": 0
                    },
                    "y": {
                        "scale": "y",
                        "field": "Title"
                    },
                    "height": {
                        "scale": "y",
                        "band": true
                    }
                }
            }
        }
    ],
    "scales": [
        {
            "name": "x",
            "type": "linear",
            "domain": [
                7,
                10
            ],
            "range": [
                0,
                {
                    "signal": "width"
                }
            ],
            "nice": true,
            "zero": false
        },
        {
            "name": "y",
            "type": "band",
            "domain": {
                "data": "source_0",
                "field": "Title",
                "sort": true
            },
            "range": [
                0,
                {
                    "signal": "height"
                }
            ],
            "paddingInner": 0.1,
            "paddingOuter": 0.05
        }
    ],
    "axes": [
        {
            "scale": "x",
            "orient": "bottom",
            "title": "IMDB rating",
            "labelFlush": true,
            "labelOverlap": true,
            "tickCount": {
                "signal": "ceil(width/40)"
            },
            "zindex": 1
        },
        {
            "scale": "x",
            "orient": "bottom",
            "grid": true,
            "tickCount": {
                "signal": "ceil(width/40)"
            },
            "gridScale": "y",
            "domain": false,
            "labels": false,
            "maxExtent": 0,
            "minExtent": 0,
            "ticks": false,
            "zindex": 0
        },
        {
            "scale": "y",
            "orient": "left",
            "title": "Title",
            "labelOverlap": true,
            "zindex": 1
        }
    ],
    "config": {
        "axisY": {
            "minExtent": 30
        }
    }
}
