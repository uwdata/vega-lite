{
    "$schema": "https://vega.github.io/schema/vega/v3.0.json",
    "description": "Stock price over time with color legend orient = left.",
    "autosize": "pad",
    "padding": 5,
    "style": "cell",
    "data": [
        {
            "name": "source_0",
            "url": "data/stocks.csv",
            "format": {
                "type": "csv"
            }
        },
        {
            "name": "data_0",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toDate(datum[\"date\"])",
                    "as": "date"
                },
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"price\"])",
                    "as": "price"
                },
                {
                    "type": "filter",
                    "expr": "datum[\"date\"] !== null && !isNaN(datum[\"date\"]) && datum[\"price\"] !== null && !isNaN(datum[\"price\"])"
                }
            ]
        },
        {
            "name": "data_1",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toDate(datum[\"date\"])",
                    "as": "date"
                },
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"price\"])",
                    "as": "price"
                },
                {
                    "type": "filter",
                    "expr": "datum[\"date\"] !== null && !isNaN(datum[\"date\"]) && datum[\"price\"] !== null && !isNaN(datum[\"price\"])"
                }
            ]
        }
    ],
    "signals": [
        {
            "name": "width",
            "update": "200"
        },
        {
            "name": "height",
            "update": "200"
        }
    ],
    "marks": [
        {
            "name": "layer_0_pathgroup",
            "type": "group",
            "from": {
                "facet": {
                    "name": "faceted_path_layer_0_main",
                    "data": "data_0",
                    "groupby": [
                        "symbol"
                    ]
                }
            },
            "encode": {
                "update": {
                    "width": {
                        "field": {
                            "group": "width"
                        }
                    },
                    "height": {
                        "field": {
                            "group": "height"
                        }
                    }
                }
            },
            "marks": [
                {
                    "name": "layer_0_marks",
                    "type": "line",
                    "style": [
                        "line"
                    ],
                    "sort": {
                        "field": "datum[\"date\"]",
                        "order": "descending"
                    },
                    "from": {
                        "data": "faceted_path_layer_0_main"
                    },
                    "encode": {
                        "update": {
                            "x": {
                                "scale": "x",
                                "field": "date"
                            },
                            "y": {
                                "scale": "y",
                                "field": "price"
                            },
                            "stroke": {
                                "scale": "color",
                                "field": "symbol"
                            }
                        }
                    }
                }
            ]
        },
        {
            "name": "layer_1_marks",
            "type": "symbol",
            "style": [
                "point"
            ],
            "from": {
                "data": "data_1"
            },
            "encode": {
                "update": {
                    "x": {
                        "scale": "x",
                        "field": "date"
                    },
                    "y": {
                        "scale": "y",
                        "field": "price"
                    },
                    "fill": {
                        "scale": "color",
                        "field": "symbol"
                    },
                    "opacity": {
                        "value": 0.7
                    }
                }
            }
        }
    ],
    "scales": [
        {
            "name": "x",
            "type": "time",
            "domain": {
                "fields": [
                    {
                        "data": "data_0",
                        "field": "date"
                    },
                    {
                        "data": "data_1",
                        "field": "date"
                    }
                ],
                "sort": true
            },
            "range": [
                0,
                {
                    "signal": "width"
                }
            ]
        },
        {
            "name": "y",
            "type": "linear",
            "domain": {
                "fields": [
                    {
                        "data": "data_0",
                        "field": "price"
                    },
                    {
                        "data": "data_1",
                        "field": "price"
                    }
                ],
                "sort": true
            },
            "range": [
                {
                    "signal": "height"
                },
                0
            ],
            "nice": true,
            "zero": true
        },
        {
            "name": "color",
            "type": "ordinal",
            "domain": {
                "fields": [
                    {
                        "data": "data_0",
                        "field": "symbol"
                    },
                    {
                        "data": "data_1",
                        "field": "symbol"
                    }
                ],
                "sort": true
            },
            "range": "category"
        }
    ],
    "axes": [
        {
            "scale": "x",
            "labelOverlap": true,
            "orient": "bottom",
            "tickCount": {
                "signal": "ceil(width/40)"
            },
            "title": "date",
            "zindex": 1,
            "encode": {
                "labels": {
                    "update": {
                        "text": {
                            "signal": "timeFormat(datum.value, '%b %d, %Y')"
                        },
                        "angle": {
                            "value": 270
                        },
                        "align": {
                            "value": "right"
                        },
                        "baseline": {
                            "value": "middle"
                        }
                    }
                }
            }
        },
        {
            "scale": "x",
            "domain": false,
            "grid": true,
            "labels": false,
            "maxExtent": 0,
            "minExtent": 0,
            "orient": "bottom",
            "tickCount": {
                "signal": "ceil(width/40)"
            },
            "ticks": false,
            "zindex": 0,
            "gridScale": "y"
        },
        {
            "scale": "y",
            "labelOverlap": true,
            "orient": "left",
            "tickCount": {
                "signal": "ceil(height/40)"
            },
            "title": "price",
            "zindex": 1
        },
        {
            "scale": "y",
            "domain": false,
            "grid": true,
            "labels": false,
            "maxExtent": 0,
            "minExtent": 0,
            "orient": "left",
            "tickCount": {
                "signal": "ceil(height/40)"
            },
            "ticks": false,
            "zindex": 0,
            "gridScale": "x"
        }
    ],
    "legends": [
        {
            "orient": "left",
            "stroke": "color",
            "title": "symbol",
            "fill": "color",
            "encode": {
                "symbols": {
                    "update": {
                        "opacity": {
                            "value": 0.7
                        }
                    }
                }
            }
        }
    ],
    "config": {
        "axisY": {
            "minExtent": 30
        }
    }
}
