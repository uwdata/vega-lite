{
    "$schema": "https://vega.github.io/schema/vega/v3.0.json",
    "description": "A scatterplot showing horsepower and miles per gallons for various cars.",
    "autosize": "pad",
    "padding": 5,
    "width": 200,
    "height": 200,
    "style": "cell",
    "data": [
        {
            "name": "source_0",
            "url": "data/cars.json",
            "format": {
                "type": "json"
            }
        },
        {
            "name": "data_0",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"Horsepower\"])",
                    "as": "Horsepower"
                },
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"Miles_per_Gallon\"])",
                    "as": "Miles_per_Gallon"
                },
                {
                    "type": "filter",
                    "expr": "datum[\"Horsepower\"] !== null && !isNaN(datum[\"Horsepower\"]) && datum[\"Miles_per_Gallon\"] !== null && !isNaN(datum[\"Miles_per_Gallon\"])"
                }
            ]
        },
        {
            "name": "data_1",
            "source": "source_0",
            "transform": [
                {
                    "type": "filter",
                    "expr": "datum.Horsepower > 150"
                }
            ]
        },
        {
            "name": "data_2",
            "source": "data_1",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"Horsepower\"])",
                    "as": "Horsepower"
                },
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"Miles_per_Gallon\"])",
                    "as": "Miles_per_Gallon"
                },
                {
                    "type": "aggregate",
                    "groupby": [],
                    "ops": [
                        "mean",
                        "mean"
                    ],
                    "fields": [
                        "Horsepower",
                        "Miles_per_Gallon"
                    ],
                    "as": [
                        "mean_Horsepower",
                        "mean_Miles_per_Gallon"
                    ]
                }
            ]
        },
        {
            "name": "data_3",
            "source": "data_1",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"Horsepower\"])",
                    "as": "Horsepower"
                },
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"Miles_per_Gallon\"])",
                    "as": "Miles_per_Gallon"
                },
                {
                    "type": "aggregate",
                    "groupby": [],
                    "ops": [
                        "mean",
                        "mean"
                    ],
                    "fields": [
                        "Horsepower",
                        "Miles_per_Gallon"
                    ],
                    "as": [
                        "mean_Horsepower",
                        "mean_Miles_per_Gallon"
                    ]
                }
            ]
        }
    ],
    "marks": [
        {
            "name": "layer_0_marks",
            "type": "symbol",
            "style": [
                "point"
            ],
            "from": {
                "data": "data_0"
            },
            "encode": {
                "update": {
                    "opacity": {
                        "value": 0.7
                    },
                    "fill": {
                        "value": "transparent"
                    },
                    "stroke": [
                        {
                            "test": "datum.Horsepower > 150",
                            "value": "red"
                        },
                        {
                            "value": "#4c78a8"
                        }
                    ],
                    "x": {
                        "scale": "x",
                        "field": "Horsepower"
                    },
                    "y": {
                        "scale": "y",
                        "field": "Miles_per_Gallon"
                    }
                }
            }
        },
        {
            "name": "layer_1_layer_0_marks",
            "type": "rule",
            "style": [
                "rule",
                "callout-line"
            ],
            "from": {
                "data": "data_2"
            },
            "encode": {
                "update": {
                    "stroke": {
                        "value": "black"
                    },
                    "x": {
                        "scale": "x",
                        "field": "mean_Horsepower"
                    },
                    "y": {
                        "scale": "y",
                        "field": "mean_Miles_per_Gallon"
                    },
                    "x2": {
                        "scale": "x",
                        "field": "mean_Horsepower",
                        "offset": 21.213203435596427
                    },
                    "y2": {
                        "scale": "y",
                        "field": "mean_Miles_per_Gallon",
                        "offset": -21.213203435596423
                    }
                }
            }
        },
        {
            "name": "layer_1_layer_1_marks",
            "type": "text",
            "style": [
                "text",
                "callout-label"
            ],
            "from": {
                "data": "data_3"
            },
            "encode": {
                "update": {
                    "align": {
                        "value": "left"
                    },
                    "baseline": {
                        "value": "middle"
                    },
                    "fill": {
                        "value": "black"
                    },
                    "x": {
                        "scale": "x",
                        "field": "mean_Horsepower",
                        "offset": 22.627416997969522
                    },
                    "y": {
                        "scale": "y",
                        "field": "mean_Miles_per_Gallon",
                        "offset": -22.62741699796952
                    },
                    "text": {
                        "value": "high horsepower"
                    }
                }
            }
        }
    ],
    "scales": [
        {
            "name": "x",
            "type": "linear",
            "domain": {
                "fields": [
                    {
                        "data": "data_0",
                        "field": "Horsepower"
                    },
                    {
                        "data": "data_2",
                        "field": "mean_Horsepower"
                    },
                    {
                        "data": "data_3",
                        "field": "mean_Horsepower"
                    }
                ]
            },
            "range": [
                0,
                {
                    "signal": "width"
                }
            ],
            "nice": true,
            "zero": true
        },
        {
            "name": "y",
            "type": "linear",
            "domain": {
                "fields": [
                    {
                        "data": "data_0",
                        "field": "Miles_per_Gallon"
                    },
                    {
                        "data": "data_2",
                        "field": "mean_Miles_per_Gallon"
                    },
                    {
                        "data": "data_3",
                        "field": "mean_Miles_per_Gallon"
                    }
                ]
            },
            "range": [
                {
                    "signal": "height"
                },
                0
            ],
            "nice": true,
            "zero": true
        }
    ],
    "axes": [
        {
            "scale": "x",
            "orient": "bottom",
            "title": "Horsepower, Mean of Horsepower",
            "labelFlush": true,
            "labelOverlap": true,
            "tickCount": {
                "signal": "ceil(width/40)"
            },
            "zindex": 1
        },
        {
            "scale": "x",
            "orient": "bottom",
            "grid": true,
            "tickCount": {
                "signal": "ceil(width/40)"
            },
            "gridScale": "y",
            "domain": false,
            "labels": false,
            "maxExtent": 0,
            "minExtent": 0,
            "ticks": false,
            "zindex": 0
        },
        {
            "scale": "y",
            "orient": "left",
            "title": "Miles_per_Gallon, Mean of Miles_per_Gallon",
            "labelOverlap": true,
            "tickCount": {
                "signal": "ceil(height/40)"
            },
            "zindex": 1
        },
        {
            "scale": "y",
            "orient": "left",
            "grid": true,
            "tickCount": {
                "signal": "ceil(height/40)"
            },
            "gridScale": "x",
            "domain": false,
            "labels": false,
            "maxExtent": 0,
            "minExtent": 0,
            "ticks": false,
            "zindex": 0
        }
    ],
    "config": {
        "axisY": {
            "minExtent": 30
        }
    }
}
