{
    "$schema": "https://vega.github.io/schema/vega/v3.0.json",
    "autosize": "pad",
    "padding": 5,
    "width": 300,
    "height": 200,
    "style": "cell",
    "data": [
        {
            "name": "source_0",
            "url": "data/unemployment-across-industries.json",
            "format": {
                "type": "json",
                "parse": {
                    "date": "date",
                    "count": "number"
                }
            },
            "transform": [
                {
                    "type": "filter",
                    "expr": "datum[\"date\"] !== null && !isNaN(datum[\"date\"])"
                },
                {
                    "type": "formula",
                    "as": "yearmonth_date",
                    "expr": "datetime(year(datum[\"date\"]), month(datum[\"date\"]), 1, 0, 0, 0, 0)"
                },
                {
                    "type": "aggregate",
                    "groupby": [
                        "yearmonth_date"
                    ],
                    "ops": [
                        "sum"
                    ],
                    "fields": [
                        "count"
                    ],
                    "as": [
                        "sum_count"
                    ]
                }
            ]
        }
    ],
    "marks": [
        {
            "name": "marks",
            "type": "area",
            "style": [
                "area"
            ],
            "sort": {
                "field": "datum[\"yearmonth_date\"]",
                "order": "descending"
            },
            "from": {
                "data": "source_0"
            },
            "encode": {
                "update": {
                    "x": {
                        "scale": "x",
                        "field": "yearmonth_date"
                    },
                    "y": {
                        "scale": "y",
                        "field": "sum_count"
                    },
                    "y2": {
                        "scale": "y",
                        "value": 0
                    },
                    "fill": {
                        "value": "#4c78a8"
                    },
                    "orient": {
                        "value": "vertical"
                    }
                }
            }
        }
    ],
    "scales": [
        {
            "name": "x",
            "type": "time",
            "domain": {
                "data": "source_0",
                "field": "yearmonth_date"
            },
            "range": [
                0,
                {
                    "signal": "width"
                }
            ],
            "nice": "month"
        },
        {
            "name": "y",
            "type": "linear",
            "domain": {
                "data": "source_0",
                "field": "sum_count"
            },
            "range": [
                {
                    "signal": "height"
                },
                0
            ],
            "nice": true,
            "zero": true
        }
    ],
    "axes": [
        {
            "scale": "x",
            "labelOverlap": true,
            "orient": "bottom",
            "tickCount": {
                "signal": "ceil(width/40)"
            },
            "title": "YEARMONTH(date)",
            "zindex": 1,
            "encode": {
                "labels": {
                    "update": {
                        "text": {
                            "signal": "timeFormat(datum.value, '%Y')"
                        }
                    }
                }
            }
        },
        {
            "scale": "x",
            "domain": false,
            "grid": true,
            "labels": false,
            "maxExtent": 0,
            "minExtent": 0,
            "orient": "bottom",
            "tickCount": {
                "signal": "ceil(width/40)"
            },
            "ticks": false,
            "zindex": 0,
            "gridScale": "y"
        },
        {
            "scale": "y",
            "labelOverlap": true,
            "orient": "left",
            "tickCount": {
                "signal": "ceil(height/40)"
            },
            "title": "SUM(count)",
            "zindex": 1
        },
        {
            "scale": "y",
            "domain": false,
            "grid": true,
            "labels": false,
            "maxExtent": 0,
            "minExtent": 0,
            "orient": "left",
            "tickCount": {
                "signal": "ceil(height/40)"
            },
            "ticks": false,
            "zindex": 0,
            "gridScale": "x"
        }
    ],
    "config": {
        "axisY": {
            "minExtent": 30
        }
    }
}
