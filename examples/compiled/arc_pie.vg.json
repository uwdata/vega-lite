{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "A simple pie chart with embedded data.",
  "background": "white",
  "padding": 5,
  "width": 200,
  "height": 200,
  "style": "cell",
  "data": [
    {
      "name": "source_0",
      "values": [
        {"id": 1, "field": 4},
        {"id": 2, "field": 6},
        {"id": 3, "field": 10},
        {"id": 4, "field": 3},
        {"id": 5, "field": 7},
        {"id": 6, "field": 8}
      ]
    },
    {
      "name": "data_0",
      "source": "source_0",
      "transform": [
        {
          "type": "stack",
          "groupby": [],
          "field": "field",
          "sort": {"field": ["id"], "order": ["ascending"]},
          "as": ["field_start", "field_end"],
          "offset": "zero"
        },
        {
          "type": "filter",
          "expr": "isValid(datum[\"field\"]) && isFinite(+datum[\"field\"])"
        }
      ]
    }
  ],
  "marks": [
    {
      "name": "marks",
      "type": "arc",
      "style": ["arc"],
      "from": {"data": "data_0"},
      "encode": {
        "update": {
          "fill": {"scale": "color", "field": "id"},
          "x": {"signal": "width", "mult": 0.5},
          "y": {"signal": "height", "mult": 0.5},
          "outerRadius": {"signal": "min(width,height)/2"},
          "innerRadius": {"value": 0},
          "startAngle": {"scale": "theta", "field": "field_end"},
          "endAngle": {"scale": "theta", "field": "field_start"}
        }
      }
    }
  ],
  "scales": [
    {
      "name": "theta",
      "type": "linear",
      "domain": {"data": "data_0", "fields": ["field_start", "field_end"]},
      "range": [0, 6.283185307179586],
      "zero": false
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "data_0", "field": "id", "sort": true},
      "range": "category"
    }
  ],
  "legends": [{"fill": "color", "symbolType": "circle", "title": "id"}]
}
