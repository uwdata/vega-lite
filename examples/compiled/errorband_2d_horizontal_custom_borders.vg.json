{
    "$schema": "https://vega.github.io/schema/vega/v3.0.json",
    "autosize": "pad",
    "padding": 5,
    "width": 200,
    "style": "cell",
    "data": [
        {
            "name": "source_0",
            "url": "data/barley.json",
            "format": {
                "type": "json"
            },
            "transform": [
                {
                    "type": "aggregate",
                    "groupby": [
                        "variety"
                    ],
                    "ops": [
                        "stderr",
                        "mean"
                    ],
                    "fields": [
                        "yield",
                        "yield"
                    ],
                    "as": [
                        "extent_yield",
                        "center_yield"
                    ]
                },
                {
                    "type": "formula",
                    "expr": "datum.center_yield + datum.extent_yield",
                    "as": "upper_yield"
                },
                {
                    "type": "formula",
                    "expr": "datum.center_yield - datum.extent_yield",
                    "as": "lower_yield"
                }
            ]
        }
    ],
    "signals": [
        {
            "name": "y_step",
            "value": 21
        },
        {
            "name": "height",
            "update": "bandspace(domain('y').length, 1, 0.5) * y_step"
        }
    ],
    "marks": [
        {
            "name": "layer_0_marks",
            "type": "area",
            "style": [
                "area",
                "errorband-band"
            ],
            "sort": {
                "field": "datum[\"variety\"]",
                "order": "descending"
            },
            "from": {
                "data": "source_0"
            },
            "encode": {
                "update": {
                    "opacity": {
                        "value": 0.5
                    },
                    "orient": {
                        "value": "horizontal"
                    },
                    "fill": {
                        "value": "#4c78a8"
                    },
                    "x": {
                        "scale": "x",
                        "field": "lower_yield"
                    },
                    "y": {
                        "scale": "y",
                        "field": "variety"
                    },
                    "x2": {
                        "scale": "x",
                        "field": "upper_yield"
                    },
                    "defined": {
                        "signal": "datum[\"lower_yield\"] !== null && !isNaN(datum[\"lower_yield\"])"
                    }
                }
            }
        },
        {
            "name": "layer_1_marks",
            "type": "line",
            "style": [
                "line",
                "errorband-borders"
            ],
            "sort": {
                "field": "datum[\"variety\"]",
                "order": "descending"
            },
            "from": {
                "data": "source_0"
            },
            "encode": {
                "update": {
                    "stroke": {
                        "value": "black"
                    },
                    "x": {
                        "scale": "x",
                        "field": "lower_yield"
                    },
                    "y": {
                        "scale": "y",
                        "field": "variety"
                    },
                    "defined": {
                        "signal": "datum[\"lower_yield\"] !== null && !isNaN(datum[\"lower_yield\"])"
                    }
                }
            }
        },
        {
            "name": "layer_2_marks",
            "type": "line",
            "style": [
                "line",
                "errorband-borders"
            ],
            "sort": {
                "field": "datum[\"variety\"]",
                "order": "descending"
            },
            "from": {
                "data": "source_0"
            },
            "encode": {
                "update": {
                    "stroke": {
                        "value": "black"
                    },
                    "x": {
                        "scale": "x",
                        "field": "upper_yield"
                    },
                    "y": {
                        "scale": "y",
                        "field": "variety"
                    },
                    "defined": {
                        "signal": "datum[\"upper_yield\"] !== null && !isNaN(datum[\"upper_yield\"])"
                    }
                }
            }
        }
    ],
    "scales": [
        {
            "name": "x",
            "type": "linear",
            "domain": {
                "data": "source_0",
                "fields": [
                    "lower_yield",
                    "upper_yield"
                ]
            },
            "range": [
                0,
                {
                    "signal": "width"
                }
            ],
            "zero": false,
            "nice": true
        },
        {
            "name": "y",
            "type": "point",
            "domain": {
                "data": "source_0",
                "field": "variety",
                "sort": true
            },
            "range": {
                "step": {
                    "signal": "y_step"
                }
            },
            "padding": 0.5
        }
    ],
    "axes": [
        {
            "scale": "x",
            "orient": "bottom",
            "title": "Barley Yield",
            "labelFlush": true,
            "labelOverlap": true,
            "tickCount": {
                "signal": "ceil(width/40)"
            },
            "zindex": 1
        },
        {
            "scale": "x",
            "orient": "bottom",
            "grid": true,
            "tickCount": {
                "signal": "ceil(width/40)"
            },
            "gridScale": "y",
            "domain": false,
            "labels": false,
            "maxExtent": 0,
            "minExtent": 0,
            "ticks": false,
            "zindex": 0
        },
        {
            "scale": "y",
            "orient": "left",
            "title": "variety",
            "labelOverlap": true,
            "zindex": 1
        }
    ],
    "config": {
        "axisY": {
            "minExtent": 30
        }
    }
}
