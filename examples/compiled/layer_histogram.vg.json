{
    "$schema": "https://vega.github.io/schema/vega/v3.0.json",
    "autosize": "pad",
    "padding": 5,
    "style": "cell",
    "data": [
        {
            "name": "source_0",
            "url": "data/flights-2k.json",
            "format": {
                "type": "json"
            }
        },
        {
            "name": "data_0",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"distance\"])",
                    "as": "distance"
                },
                {
                    "type": "extent",
                    "field": "distance",
                    "signal": "layer_0_bin_maxbins_10_distance_extent"
                },
                {
                    "type": "bin",
                    "field": "distance",
                    "as": [
                        "bin_maxbins_10_distance",
                        "bin_maxbins_10_distance_end"
                    ],
                    "signal": "layer_0_bin_maxbins_10_distance_bins",
                    "maxbins": 10,
                    "extent": {
                        "signal": "layer_0_bin_maxbins_10_distance_extent"
                    }
                },
                {
                    "type": "filter",
                    "expr": "datum[\"distance\"] !== null && !isNaN(datum[\"distance\"])"
                },
                {
                    "type": "aggregate",
                    "groupby": [
                        "bin_maxbins_10_distance",
                        "bin_maxbins_10_distance_end"
                    ],
                    "ops": [
                        "count"
                    ],
                    "fields": [
                        "*"
                    ],
                    "as": [
                        "count_*"
                    ]
                }
            ]
        },
        {
            "name": "data_1",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"distance\"])",
                    "as": "distance"
                },
                {
                    "type": "extent",
                    "field": "distance",
                    "signal": "layer_1_bin_maxbins_10_distance_extent"
                },
                {
                    "type": "bin",
                    "field": "distance",
                    "as": [
                        "bin_maxbins_10_distance",
                        "bin_maxbins_10_distance_end"
                    ],
                    "signal": "layer_1_bin_maxbins_10_distance_bins",
                    "maxbins": 10,
                    "extent": {
                        "signal": "layer_1_bin_maxbins_10_distance_extent"
                    }
                },
                {
                    "type": "filter",
                    "expr": "datum.delay < 500"
                },
                {
                    "type": "filter",
                    "expr": "datum[\"distance\"] !== null && !isNaN(datum[\"distance\"])"
                },
                {
                    "type": "aggregate",
                    "groupby": [
                        "bin_maxbins_10_distance",
                        "bin_maxbins_10_distance_end"
                    ],
                    "ops": [
                        "count"
                    ],
                    "fields": [
                        "*"
                    ],
                    "as": [
                        "count_*"
                    ]
                }
            ]
        }
    ],
    "signals": [
        {
            "name": "width",
            "update": "200"
        },
        {
            "name": "height",
            "update": "200"
        }
    ],
    "marks": [
        {
            "name": "layer_0_marks",
            "type": "rect",
            "style": [
                "bar"
            ],
            "from": {
                "data": "data_0"
            },
            "encode": {
                "update": {
                    "x2": {
                        "scale": "x",
                        "field": "bin_maxbins_10_distance",
                        "offset": 1
                    },
                    "x": {
                        "scale": "x",
                        "field": "bin_maxbins_10_distance_end"
                    },
                    "y": {
                        "scale": "y",
                        "field": "count_*"
                    },
                    "y2": {
                        "scale": "y",
                        "value": 0
                    },
                    "fill": {
                        "value": "#4c78a8"
                    }
                }
            }
        },
        {
            "name": "layer_1_marks",
            "type": "rect",
            "style": [
                "bar"
            ],
            "from": {
                "data": "data_1"
            },
            "encode": {
                "update": {
                    "x2": {
                        "scale": "x",
                        "field": "bin_maxbins_10_distance",
                        "offset": 1
                    },
                    "x": {
                        "scale": "x",
                        "field": "bin_maxbins_10_distance_end"
                    },
                    "y": {
                        "scale": "y",
                        "field": "count_*"
                    },
                    "y2": {
                        "scale": "y",
                        "value": 0
                    },
                    "fill": {
                        "value": "goldenrod"
                    }
                }
            }
        }
    ],
    "scales": [
        {
            "name": "x",
            "type": "linear",
            "domain": {
                "fields": [
                    {
                        "data": "data_0",
                        "field": "bin_maxbins_10_distance"
                    },
                    {
                        "data": "data_0",
                        "field": "bin_maxbins_10_distance_end"
                    },
                    {
                        "data": "data_1",
                        "field": "bin_maxbins_10_distance"
                    },
                    {
                        "data": "data_1",
                        "field": "bin_maxbins_10_distance_end"
                    }
                ],
                "sort": true
            },
            "range": [
                0,
                {
                    "signal": "width"
                }
            ],
            "zero": false
        },
        {
            "name": "y",
            "type": "linear",
            "domain": {
                "fields": [
                    {
                        "data": "data_0",
                        "field": "count_*"
                    },
                    {
                        "data": "data_1",
                        "field": "count_*"
                    }
                ],
                "sort": true
            },
            "range": [
                {
                    "signal": "height"
                },
                0
            ],
            "nice": true,
            "zero": true
        }
    ],
    "axes": [
        {
            "scale": "x",
            "labelOverlap": true,
            "orient": "bottom",
            "tickCount": {
                "signal": "min(ceil(width/40), 10)"
            },
            "title": "BIN(distance)",
            "zindex": 1,
            "encode": {
                "labels": {
                    "update": {
                        "angle": {
                            "value": 270
                        },
                        "align": {
                            "value": "right"
                        },
                        "baseline": {
                            "value": "middle"
                        }
                    }
                }
            }
        },
        {
            "scale": "y",
            "labelOverlap": true,
            "orient": "left",
            "tickCount": {
                "signal": "ceil(height/40)"
            },
            "title": "Number of Records",
            "zindex": 1
        },
        {
            "scale": "y",
            "domain": false,
            "grid": true,
            "labels": false,
            "maxExtent": 0,
            "minExtent": 0,
            "orient": "left",
            "tickCount": {
                "signal": "ceil(height/40)"
            },
            "ticks": false,
            "zindex": 0,
            "gridScale": "x"
        }
    ],
    "config": {
        "axisY": {
            "minExtent": 30
        }
    }
}
