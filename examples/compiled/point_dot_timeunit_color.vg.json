{
  "$schema": "https://vega.github.io/schema/vega/v4.json",
  "autosize": "pad",
  "padding": 5,
  "width": 200,
  "height": 20,
  "style": "cell",
  "data": [
    {
      "name": "source_0",
      "url": "data/seattle-temps.csv",
      "format": {"type": "csv", "parse": {"date": "date"}},
      "transform": [
        {
          "type": "formula",
          "as": "yearmonth_date",
          "expr": "datetime(year(datum[\"date\"]), month(datum[\"date\"]), 1, 0, 0, 0, 0)"
        },
        {
          "type": "aggregate",
          "groupby": ["yearmonth_date"],
          "ops": ["mean"],
          "fields": ["temp"],
          "as": ["mean_temp"]
        }
      ]
    }
  ],
  "marks": [
    {
      "name": "marks",
      "type": "symbol",
      "style": ["point"],
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "fill": [
            {
              "test": "datum[\"mean_temp\"] === null || isNaN(datum[\"mean_temp\"]) || datum[\"yearmonth_date\"] === null || isNaN(datum[\"yearmonth_date\"])",
              "value": null
            },
            {"value": "transparent"}
          ],
          "stroke": [
            {
              "test": "datum[\"mean_temp\"] === null || isNaN(datum[\"mean_temp\"]) || datum[\"yearmonth_date\"] === null || isNaN(datum[\"yearmonth_date\"])",
              "value": null
            },
            {"scale": "color", "field": "yearmonth_date"}
          ],
          "tooltip": {
            "signal": "{\"date (year-month)\": timeFormat(datum[\"yearmonth_date\"], '%b %Y'), \"Mean of temp\": format(datum[\"mean_temp\"], \"\")}"
          },
          "x": {"scale": "x", "field": "mean_temp"},
          "y": {"signal": "height", "mult": 0.5}
        }
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": {"data": "source_0", "field": "mean_temp"},
      "range": [0, {"signal": "width"}],
      "nice": true,
      "zero": true
    },
    {
      "name": "color",
      "type": "time",
      "domain": {"data": "source_0", "field": "yearmonth_date"},
      "range": ["#f7fbff", "#0e427f"],
      "interpolate": "hcl"
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "title": "Mean of temp",
      "labelFlush": true,
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(width/40)"},
      "zindex": 1
    },
    {
      "scale": "x",
      "orient": "bottom",
      "grid": true,
      "tickCount": {"signal": "ceil(width/40)"},
      "domain": false,
      "labels": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "gradientLength": {"signal": "clamp(height, 64, 200)"},
      "title": "date (year-month)",
      "encode": {
        "labels": {
          "update": {"text": {"signal": "timeFormat(datum.value, '%b %Y')"}}
        }
      }
    }
  ],
  "config": {"axisY": {"minExtent": 30}}
}
