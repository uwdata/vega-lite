{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "A simple pie chart with labels.",
  "background": "white",
  "padding": 5,
  "width": 200,
  "height": 200,
  "style": "cell",
  "data": [
    {
      "name": "source_0",
      "values": [
        {"id": "a", "field": 4},
        {"id": "b", "field": 6},
        {"id": "c", "field": 10},
        {"id": "d", "field": 3},
        {"id": "e", "field": 7},
        {"id": "f", "field": 8}
      ]
    },
    {
      "name": "data_1",
      "source": "source_0",
      "transform": [
        {
          "type": "stack",
          "groupby": [],
          "field": "field",
          "sort": {"field": ["id"], "order": ["ascending"]},
          "as": ["field_start", "field_end"],
          "offset": "zero"
        },
        {
          "type": "filter",
          "expr": "isValid(datum[\"field\"]) && isFinite(+datum[\"field\"])"
        }
      ]
    },
    {
      "name": "data_2",
      "source": "source_0",
      "transform": [
        {
          "type": "stack",
          "groupby": [],
          "field": "field",
          "sort": {"field": ["id", "id"], "order": ["ascending", "ascending"]},
          "as": ["field_start", "field_end"],
          "offset": "zero"
        },
        {
          "type": "filter",
          "expr": "isValid(datum[\"field\"]) && isFinite(+datum[\"field\"])"
        }
      ]
    }
  ],
  "marks": [
    {
      "name": "layer_0_marks",
      "type": "arc",
      "style": ["arc"],
      "from": {"data": "data_1"},
      "encode": {
        "update": {
          "outerRadius": {"value": 80},
          "fill": {"scale": "color", "field": "id"},
          "x": {"signal": "width", "mult": 0.5},
          "y": {"signal": "height", "mult": 0.5},
          "innerRadius": {"value": 0},
          "startAngle": {"scale": "theta", "field": "field_end"},
          "endAngle": {"scale": "theta", "field": "field_start"}
        }
      }
    },
    {
      "name": "layer_1_marks",
      "type": "text",
      "style": ["text"],
      "from": {"data": "data_2"},
      "encode": {
        "update": {
          "radius": {"value": 90},
          "fill": {"scale": "color", "field": "id"},
          "x": {"signal": "width", "mult": 0.5},
          "y": {"signal": "height", "mult": 0.5},
          "text": {
            "signal": "isValid(datum[\"id\"]) ? datum[\"id\"] : \"\"+datum[\"id\"]"
          },
          "align": {"value": "center"},
          "baseline": {"value": "middle"},
          "theta": {
            "signal": "scale(\"theta\", 0.5 * datum[\"field_start\"] + 0.5 * datum[\"field_end\"])"
          }
        }
      }
    }
  ],
  "scales": [
    {
      "name": "theta",
      "type": "linear",
      "domain": {
        "fields": [
          {"data": "data_1", "field": "field_start"},
          {"data": "data_1", "field": "field_end"},
          {"data": "data_2", "field": "field_start"},
          {"data": "data_2", "field": "field_end"}
        ]
      },
      "range": [0, 6.283185307179586],
      "zero": false
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "fields": [
          {"data": "data_1", "field": "id"},
          {"data": "data_2", "field": "id"}
        ],
        "sort": true
      },
      "range": "category"
    }
  ]
}
