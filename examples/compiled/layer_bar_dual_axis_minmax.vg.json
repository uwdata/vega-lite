{
  "$schema": "https://vega.github.io/schema/vega/v4.json",
  "description": "Barchart for precipitation overlayed with linecharts to show temperature range.",
  "autosize": "pad",
  "padding": 5,
  "height": 200,
  "style": "cell",
  "data": [
    {
      "name": "source_0",
      "url": "data/seattle-weather.csv",
      "format": {
        "type": "csv",
        "parse": {
          "date": "date",
          "precipitation": "number",
          "temp_max": "number",
          "temp_min": "number"
        }
      }
    },
    {
      "name": "data_0",
      "source": "source_0",
      "transform": [
        {
          "type": "formula",
          "as": "month_date",
          "expr": "datetime(0, month(datum[\"date\"]), 1, 0, 0, 0, 0)"
        },
        {
          "type": "aggregate",
          "groupby": ["month_date"],
          "ops": ["mean"],
          "fields": ["precipitation"],
          "as": ["mean_precipitation"]
        }
      ]
    },
    {
      "name": "data_1",
      "source": "source_0",
      "transform": [
        {
          "type": "formula",
          "as": "month_date",
          "expr": "datetime(0, month(datum[\"date\"]), 1, 0, 0, 0, 0)"
        },
        {
          "type": "aggregate",
          "groupby": ["month_date"],
          "ops": ["max"],
          "fields": ["temp_max"],
          "as": ["max_temp_max"]
        }
      ]
    },
    {
      "name": "data_2",
      "source": "source_0",
      "transform": [
        {
          "type": "formula",
          "as": "month_date",
          "expr": "datetime(0, month(datum[\"date\"]), 1, 0, 0, 0, 0)"
        },
        {
          "type": "aggregate",
          "groupby": ["month_date"],
          "ops": ["min"],
          "fields": ["temp_min"],
          "as": ["min_temp_min"]
        }
      ]
    }
  ],
  "signals": [
    {"name": "x_step", "value": 21},
    {
      "name": "width",
      "update": "bandspace(domain('x').length, 0.1, 0.05) * x_step"
    }
  ],
  "marks": [
    {
      "name": "layer_0_marks",
      "type": "rect",
      "style": ["bar"],
      "from": {"data": "data_0"},
      "encode": {
        "update": {
          "fill": [
            {
              "test": "datum[\"mean_precipitation\"] === null || isNaN(datum[\"mean_precipitation\"])",
              "value": null
            },
            {"value": "#4c78a8"}
          ],
          "tooltip": {
            "signal": "{\"date (month)\": timeFormat(datum[\"month_date\"], '%b'), \"Mean of precipitation\": format(datum[\"mean_precipitation\"], \"\")}"
          },
          "x": {"scale": "x", "field": "month_date"},
          "width": {"scale": "x", "band": true},
          "y": {"scale": "layer_0_y", "field": "mean_precipitation"},
          "y2": {"scale": "layer_0_y", "value": 0}
        }
      }
    },
    {
      "name": "layer_1_layer_0_marks",
      "type": "line",
      "style": ["line"],
      "sort": {"field": "datum[\"month_date\"]", "order": "descending"},
      "from": {"data": "data_1"},
      "encode": {
        "update": {
          "stroke": {"value": "firebrick"},
          "tooltip": {
            "signal": "{\"date (month)\": timeFormat(datum[\"month_date\"], '%b'), \"Max of temp_max\": format(datum[\"max_temp_max\"], \"\")}"
          },
          "x": {"scale": "x", "field": "month_date", "band": 0.5},
          "y": {"scale": "layer_1_y", "field": "max_temp_max"},
          "defined": {
            "signal": "datum[\"max_temp_max\"] !== null && !isNaN(datum[\"max_temp_max\"])"
          }
        }
      }
    },
    {
      "name": "layer_1_layer_1_marks",
      "type": "line",
      "style": ["line"],
      "sort": {"field": "datum[\"month_date\"]", "order": "descending"},
      "from": {"data": "data_2"},
      "encode": {
        "update": {
          "stroke": {"value": "firebrick"},
          "tooltip": {
            "signal": "{\"date (month)\": timeFormat(datum[\"month_date\"], '%b'), \"Min of temp_min\": format(datum[\"min_temp_min\"], \"\")}"
          },
          "x": {"scale": "x", "field": "month_date", "band": 0.5},
          "y": {"scale": "layer_1_y", "field": "min_temp_min"},
          "defined": {
            "signal": "datum[\"min_temp_min\"] !== null && !isNaN(datum[\"min_temp_min\"])"
          }
        }
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "domain": {
        "fields": [
          {"data": "data_0", "field": "month_date"},
          {"data": "data_1", "field": "month_date"},
          {"data": "data_2", "field": "month_date"}
        ],
        "sort": true
      },
      "range": {"step": {"signal": "x_step"}},
      "paddingInner": 0.1,
      "paddingOuter": 0.05
    },
    {
      "name": "layer_0_y",
      "type": "linear",
      "domain": {"data": "data_0", "field": "mean_precipitation"},
      "range": [{"signal": "height"}, 0],
      "nice": true,
      "zero": true
    },
    {
      "name": "layer_1_y",
      "type": "linear",
      "domain": {
        "fields": [
          {"data": "data_1", "field": "max_temp_max"},
          {"data": "data_2", "field": "min_temp_min"}
        ]
      },
      "range": [{"signal": "height"}, 0],
      "zero": false,
      "nice": true
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "title": "date (month)",
      "labelAlign": "right",
      "labelAngle": 270,
      "labelBaseline": "middle",
      "labelOverlap": true,
      "encode": {
        "labels": {
          "update": {"text": {"signal": "timeFormat(datum.value, '%b')"}}
        }
      },
      "zindex": 1
    },
    {
      "scale": "layer_0_y",
      "orient": "left",
      "grid": false,
      "title": "Mean Precipitation",
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(height/40)"},
      "zindex": 1
    },
    {
      "scale": "layer_1_y",
      "orient": "right",
      "grid": false,
      "title": "Temperature (min and max)",
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(height/40)"},
      "zindex": 1
    }
  ],
  "config": {"axisY": {"minExtent": 30}}
}
