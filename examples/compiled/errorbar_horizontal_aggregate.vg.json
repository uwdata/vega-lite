{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "A bar chart showing the US population distribution of age groups in 2000.",
  "autosize": "pad",
  "padding": 5,
  "width": 200,
  "style": "cell",
  "data": [
    {
      "name": "source_0",
      "url": "data/population.json",
      "format": {"type": "json"},
      "transform": [{"type": "filter", "expr": "datum.year == 2000"}]
    },
    {
      "name": "data_0",
      "source": "source_0",
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["age"],
          "ops": ["mean"],
          "fields": ["people"],
          "as": ["mean_people"]
        }
      ]
    },
    {
      "name": "data_1",
      "source": "source_0",
      "transform": [
        {
          "type": "formula",
          "expr": "toNumber(datum[\"people\"])",
          "as": "people"
        },
        {
          "type": "aggregate",
          "groupby": ["age"],
          "ops": ["max", "min"],
          "fields": ["people", "people"],
          "as": ["max_people", "min_people"]
        }
      ]
    }
  ],
  "signals": [
    {"name": "y_step", "value": 20},
    {"name": "height", "update": "bandspace(domain('y').length, 0, 0) * y_step"}
  ],
  "marks": [
    {
      "name": "layer_0_marks",
      "type": "rule",
      "style": ["rule"],
      "from": {"data": "data_1"},
      "encode": {
        "update": {
          "stroke": [
            {
              "test": "datum[\"min_people\"] === null || isNaN(datum[\"min_people\"])",
              "value": null
            },
            {"value": "black"}
          ],
          "tooltip": {
            "signal": "{\"age\": ''+datum[\"age\"], \"population\": format(datum[\"min_people\"], \"\"), \"Max of people\": format(datum[\"max_people\"], \"\")}"
          },
          "x": {"scale": "x", "field": "min_people"},
          "y": {"scale": "y", "field": "age", "band": 0.5},
          "x2": {"scale": "x", "field": "max_people"}
        }
      }
    },
    {
      "name": "layer_1_marks",
      "type": "rect",
      "style": ["tick"],
      "from": {"data": "data_1"},
      "encode": {
        "update": {
          "fill": [
            {
              "test": "datum[\"min_people\"] === null || isNaN(datum[\"min_people\"])",
              "value": null
            },
            {"value": "#4c78a8"}
          ],
          "tooltip": {
            "signal": "{\"age\": ''+datum[\"age\"], \"population\": format(datum[\"min_people\"], \"\")}"
          },
          "xc": {"scale": "x", "field": "min_people"},
          "yc": {"scale": "y", "field": "age", "band": 0.5},
          "height": {"value": 5},
          "width": {"value": 1}
        }
      }
    },
    {
      "name": "layer_2_marks",
      "type": "rect",
      "style": ["tick"],
      "from": {"data": "data_1"},
      "encode": {
        "update": {
          "fill": [
            {
              "test": "datum[\"max_people\"] === null || isNaN(datum[\"max_people\"])",
              "value": null
            },
            {"value": "#4c78a8"}
          ],
          "tooltip": {
            "signal": "{\"age\": ''+datum[\"age\"], \"population\": format(datum[\"max_people\"], \"\")}"
          },
          "xc": {"scale": "x", "field": "max_people"},
          "yc": {"scale": "y", "field": "age", "band": 0.5},
          "height": {"value": 5},
          "width": {"value": 1}
        }
      }
    },
    {
      "name": "layer_3_marks",
      "type": "symbol",
      "style": ["point"],
      "from": {"data": "data_0"},
      "encode": {
        "update": {
          "fill": [
            {
              "test": "datum[\"mean_people\"] === null || isNaN(datum[\"mean_people\"])",
              "value": null
            },
            {"value": "transparent"}
          ],
          "stroke": [
            {
              "test": "datum[\"mean_people\"] === null || isNaN(datum[\"mean_people\"])",
              "value": null
            },
            {"value": "#4c78a8"}
          ],
          "tooltip": {
            "signal": "{\"age\": ''+datum[\"age\"], \"population\": format(datum[\"mean_people\"], \"\")}"
          },
          "x": {"scale": "x", "field": "mean_people"},
          "y": {"scale": "y", "field": "age", "band": 0.5},
          "size": {"value": 2}
        }
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": {
        "fields": [
          {"data": "data_1", "field": "min_people"},
          {"data": "data_1", "field": "max_people"},
          {"data": "data_0", "field": "mean_people"}
        ]
      },
      "range": [0, {"signal": "width"}],
      "nice": true,
      "zero": true
    },
    {
      "name": "y",
      "type": "band",
      "domain": {
        "fields": [
          {"data": "data_1", "field": "age"},
          {"data": "data_0", "field": "age"}
        ],
        "sort": true
      },
      "range": {"step": {"signal": "y_step"}},
      "paddingInner": 0,
      "paddingOuter": 0
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "title": "population",
      "labelFlush": true,
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(width/40)"},
      "zindex": 1
    },
    {
      "scale": "x",
      "orient": "bottom",
      "gridScale": "y",
      "grid": true,
      "tickCount": {"signal": "ceil(width/40)"},
      "domain": false,
      "labels": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": false,
      "title": "age",
      "labelOverlap": true,
      "zindex": 1
    }
  ],
  "config": {"axisY": {"minExtent": 30}}
}
