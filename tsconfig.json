{
  "compilerOptions": {
    "outDir": "./build",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": true,
    "declaration": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "preserveConstEnums": true,
    "noEmitOnError": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noResolve": true,
    "inlineSourceMap": true,
    "typeRoots" : ["./typings", "node_modules/@types"]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "examples/*.test.ts",
    "typings/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "data",
    "_site",
    "site",
    "test-gallery",
    "typings/vega-lite.d.ts"
  ]
}
