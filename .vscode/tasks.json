{
  "version": "0.1.0",
  "command": "npm",
  "isShellCommand": true,
  "args": [
    "run"
  ],
  "showOutput": "silent",
  "tasks": [
    {
      // "npm run build"
      "taskName": "build",
      "isBuildCommand": true,
      "problemMatcher": "$tsc"
    },
    {
      // Test task, Ctrl+Shift+T
      // "npm test"
      "taskName": "test",
      "isTestCommand": true
    }
  ]
}